<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Teacher Portal</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/teacher.css" asp-append-version="true" />
</head>
<body class="teacher-layout">

    <!-- Sidebar -->
    <div class="sidebar">

        <div class="sidebar-header">
            <div class="sidebar-brand">
                <i class="bi bi-calendar-check-fill"></i>
                <span>Teacher Portal</span>
            </div>
        </div>

        <nav class="sidebar-nav">

            <!-- Dashboard -->
            <a asp-controller="Teacher" asp-action="TeachDashboard"
               class="sidebar-item @(ViewBag.ActiveMenu == "Dashboard" ? "active" : "")">
                <div class="sidebar-item-content">
                    <i class="bi bi-house-door-fill"></i>
                    <span>Dashboard</span>
                </div>
            </a>

            <!-- Attendance Dropdown -->
            <div class="sidebar-dropdown">
                <button class="sidebar-item dropdown-toggle @(ViewBag.ActiveMenu == "Attendance" ? "active" : "")"
                        type="button" data-bs-toggle="collapse" data-bs-target="#attendanceMenu">
                    <div class="sidebar-item-content">
                        <i class="bi bi-calendar-event-fill"></i>
                        <span>Attendance</span>
                    </div>
                    <i class="bi bi-chevron-down"></i>
                </button>

                <div class="collapse @(ViewBag.ActiveMenu == "Attendance" ? "show" : "")" id="attendanceMenu">

                    <!-- Mark Attendance -->
                    <a asp-controller="Teacher" asp-action="TeachMarkAttendance"
                       class="sidebar-subitem @(ViewBag.ActiveSubmenu == "MarkAttendance" ? "active" : "")">
                        <i class="bi bi-pencil-square"></i>
                        <span>Mark Attendance</span>
                    </a>

                    <!-- View Attendance History -->
                    <a asp-controller="Teacher" asp-action="TeachAttendanceHistory"
                       class="sidebar-subitem @(ViewBag.ActiveSubmenu == "History" ? "active" : "")">
                        <i class="bi bi-clock-history"></i>
                        <span>View History</span>
                    </a>

                </div>
            </div>

            <!-- Classes -->
            <a asp-controller="Teacher" asp-action="TeachClasses"
               class="sidebar-item @(ViewBag.ActiveMenu == "Classes" ? "active" : "")">
                <div class="sidebar-item-content">
                    <i class="bi bi-book-fill"></i>
                    <span>Classes</span>
                </div>
            </a>

            <!-- Students -->
            <a asp-controller="Teacher" asp-action="TeachStudents"
               class="sidebar-item @(ViewBag.ActiveMenu == "Students" ? "active" : "")">
                <div class="sidebar-item-content">
                    <i class="bi bi-people-fill"></i>
                    <span>Students</span>
                </div>
            </a>

            <!-- Teacher Profile -->
            <a asp-controller="Teacher" asp-action="TeachProfile"
               class="sidebar-item @(ViewBag.ActiveMenu == "Profile" ? "active" : "")">
                <div class="sidebar-item-content">
                    <i class="bi bi-person-badge-fill"></i>
                    <span>Teacher Profile</span>
                </div>
            </a>

            <!-- Settings Dropdown -->
             <div class="sidebar-dropdown">
                <button class="sidebar-item dropdown-toggle @(ViewBag.ActiveMenu == "Settings" ? "active" : "")"
                        type="button" data-bs-toggle="collapse" data-bs-target="#settingsMenu">
                    <div class="sidebar-item-content">
                        <i class="bi bi-gear-fill"></i>
                        <span>Settings</span>
                    </div>
                    <i class="bi bi-chevron-down"></i>
                </button>

                <div class="collapse @(ViewBag.ActiveMenu == "Settings" ? "show" : "")" id="settingsMenu">

                    <!-- Settings -->
                    <a asp-controller="Teacher" asp-action="TeachSettings"
                       class="sidebar-subitem @(ViewBag.ActiveSubmenu == "Settings" ? "active" : "")">
                        <i class="bi bi-gear-fill"></i>
                        <span>Settings</span>
                    </a>

                    <!-- Change Password -->
                    <a asp-controller="Teacher" asp-action="TeachChangePassword"
                       class="sidebar-subitem @(ViewBag.ActiveSubmenu == "ChangePassword" ? "active" : "")">
                        <i class="bi bi-wrench-adjustable"></i>
                        <span>Change Password</span>
                    </a>

                </div>
            </div>
        </nav>

        <!-- Sidebar Footer -->
        <div class="sidebar-footer">
            <div class="user-info">
                <div class="user-avatar">
                    <i class="bi bi-person-fill"></i>
                </div>
                <div class="user-details">
                    <div class="user-name">Teacher Name</div>
                    <div class="user-role">Instructor</div>
                </div>
            </div>
            <a asp-controller="Account" asp-action="Login" class="logout-btn" title="Logout">
                <i class="bi bi-box-arrow-right"></i>
            </a>
        </div>

    </div>


    <!-- Main Content -->
    <div class="main-content">

        <!-- Top bar -->
        <div class="topbar">
            <button class="sidebar-toggle" id="sidebarToggle">
                <i class="bi bi-list"></i>
            </button>

            <div class="topbar-title">
                <h1>@ViewBag.Title</h1>
            </div>

            <div class="topbar-actions">
                <button class="topbar-btn" title="Notifications">
                    <i class="bi bi-bell-fill"></i>
                    <span class="badge">3</span>
                </button>
            </div>
        </div>

        <!-- Page content -->
        <div class="page-content">
            @RenderBody()
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/teacher.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
