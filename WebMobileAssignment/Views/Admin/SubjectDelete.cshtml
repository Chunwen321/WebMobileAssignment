@model WebMobileAssignment.Models.Subject
@{
    ViewBag.Title = "Delete Subject";
    ViewBag.ActiveMenu = "ClassManagement";
    ViewBag.ActiveSubmenu = "Subjects";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Header Section -->
<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="mb-2">
                    <i class="bi bi-trash text-danger me-2"></i>
                    Delete Subject
                </h2>
                <p class="text-muted">Are you sure you want to delete this subject?</p>
            </div>
            <div>
                <a asp-action="SubjectIndex" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Back to List
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Warning Card -->
<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="alert alert-danger border-0 shadow-sm">
            <h5 class="alert-heading">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                Warning
            </h5>
            <p>You are about to delete the subject <strong>"@Model.SubjectName"</strong>. This action cannot be undone.</p>
            @if (Model.Classes != null && Model.Classes.Any())
            {
                <hr>
                <p class="mb-0">
                    <i class="bi bi-info-circle me-2"></i>
                    This subject is currently assigned to <strong>@Model.Classes.Count</strong> class(es). 
                    Deleting it will unassign the subject from these classes.
                </p>
            }
        </div>

        <!-- Subject Details Card -->
        <div class="dashboard-card">
            <div class="card-header-custom bg-light">
                <h5 class="card-title">
                    <i class="bi bi-journal-text"></i>
                    Subject Details
                </h5>
            </div>
            
            <div class="detail-list">
                <div class="detail-item">
                    <div class="detail-label">
                        <i class="bi bi-tag"></i>
                        Subject ID
                    </div>
                    <div class="detail-value">@Model.SubjectId</div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">
                        <i class="bi bi-book"></i>
                        Subject Name
                    </div>
                    <div class="detail-value">@Model.SubjectName</div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">
                        <i class="bi bi-collection"></i>
                        Assigned Classes
                    </div>
                    <div class="detail-value">
                        <span class="badge bg-info">@(Model.Classes?.Count ?? 0)</span>
                    </div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">
                        <i class="bi bi-people"></i>
                        Total Students
                    </div>
                    <div class="detail-value">
                        <span class="badge bg-secondary">@(Model.Classes?.Sum(c => c.CurrentCapacity) ?? 0)</span>
                    </div>
                </div>
            </div>

            @if (Model.Classes != null && Model.Classes.Any())
            {
                <div class="mt-3">
                    <h6 class="text-muted mb-3">
                        <i class="bi bi-link-45deg me-2"></i>
                        Associated Classes
                    </h6>
                    <ul class="list-group">
                        @foreach (var cls in Model.Classes)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>@cls.ClassName</strong>
                                    <br>
                                    <small class="text-muted">
                                        @if (cls.Teacher != null)
                                        {
                                            <span>Teacher: @cls.Teacher.User.FullName</span>
                                        }
                                        else
                                        {
                                            <span>No teacher assigned</span>
                                        }
                                    </small>
                                </div>
                                <span class="badge bg-info">@cls.CurrentCapacity/@cls.MaxCapacity students</span>
                            </li>
                        }
                    </ul>
                </div>
            }

            <form asp-action="SubjectDelete" method="post" class="mt-4">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="SubjectId" />
                
                <div class="d-flex gap-2 justify-content-end">
                    <a asp-action="SubjectIndex" class="btn btn-light">
                        <i class="bi bi-x-circle me-2"></i>Cancel
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-2"></i>Delete Subject
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .detail-list {
        padding: 0;
    }

    .detail-item {
        padding: 15px 20px;
        border-bottom: 1px solid #f0f0f0;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .detail-item:last-child {
        border-bottom: none;
    }

    .detail-label {
        font-weight: 600;
        color: #666;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .detail-label i {
        color: #999;
    }

    .detail-value {
        text-align: right;
        color: #333;
    }

    @@media (max-width: 768px) {
        .detail-item {
            flex-direction: column;
            align-items: flex-start;
            gap: 8px;
        }

        .detail-value {
            text-align: left;
        }
    }
</style>
