@model WebMobileAssignment.Models.Class
@{
    ViewBag.Title = "Class Attendance Detail";
    ViewBag.ActiveMenu = "AttendanceManagement";
    ViewBag.ActiveSubmenu = "Take";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    
    var sessions = ViewBag.Sessions as List<WebMobileAssignment.Models.AttendanceSession> ?? new List<WebMobileAssignment.Models.AttendanceSession>();
    var session = sessions.FirstOrDefault(s => s.ClassId == Model.ClassId);
    var hasSession = session != null;
    
    var todayAttendances = ViewBag.TodayAttendances as List<WebMobileAssignment.Models.Attendance> ?? new List<WebMobileAssignment.Models.Attendance>();
    
    var todayDay = DateTime.Now.DayOfWeek.ToString();
    var isToday = !string.IsNullOrEmpty(Model.Day) && Model.Day.Equals(todayDay, StringComparison.OrdinalIgnoreCase);
    
    var currentTime = DateTime.Now.TimeOfDay;
    var isActive = Model.StartTime.HasValue && Model.EndTime.HasValue && 
                   currentTime >= Model.StartTime.Value && currentTime <= Model.EndTime.Value;
}

<!-- Header Section -->
<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h5 class="mb-1">
                    <i class="bi bi-book text-primary me-2"></i>
                    @Model.ClassName - Attendance
                </h5>
                <p class="text-muted small mb-0">@DateTime.Now.ToString("MMMM dd, yyyy")</p>
            </div>
            <a href="@Url.Action("AttendanceTake")" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left"></i> Back to Classes
            </a>
        </div>
    </div>
</div>

<!-- Class Information -->
<div class="row mb-4">
    <div class="col-lg-8">
        <div class="dashboard-card">
            <div class="card-header-custom">
                <h6 class="card-title mb-0">
                    <i class="bi bi-info-circle me-2"></i>Class Information
                </h6>
            </div>
            <div class="p-4">
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="info-box">
                            <div class="info-label">Class ID</div>
                            <div class="info-value">@Model.ClassId</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-box">
                            <div class="info-label">Class Name</div>
                            <div class="info-value">@Model.ClassName</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-box">
                            <div class="info-label">Schedule</div>
                            <div class="info-value">
                                @if (Model.StartTime.HasValue && Model.EndTime.HasValue)
                                {
                                    <span>@Model.Day - @Model.StartTime.Value.ToString(@"hh\:mm") to @Model.EndTime.Value.ToString(@"hh\:mm")</span>
                                }
                                else
                                {
                                    <span class="text-muted">Not scheduled</span>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-box">
                            <div class="info-label">Room</div>
                            <div class="info-value">@(Model.RoomNumber ?? "Not assigned")</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-box">
                            <div class="info-label">Enrolled Students</div>
                            <div class="info-value">@Model.Enrollments.Count students</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-box">
                            <div class="info-label">Status</div>
                            <div class="info-value">
                                @if (isActive)
                                {
                                    <span class="badge bg-success"><i class="bi bi-circle-fill blink"></i> Class in Progress</span>
                                }
                                else if (Model.EndTime.HasValue && currentTime > Model.EndTime.Value)
                                {
                                    <span class="badge bg-secondary"><i class="bi bi-check-circle"></i> Class Ended</span>
                                }
                                else
                                {
                                    <span class="badge bg-info"><i class="bi bi-clock"></i> Upcoming</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- PIN Generation Card -->
    <div class="col-lg-4">
        <div class="dashboard-card">
            <div class="card-header-custom">
                <h6 class="card-title mb-0">
                    <i class="bi bi-key me-2"></i>Attendance PIN
                </h6>
            </div>
            <div class="p-4 text-center">
                @if (!isToday)
                {
                    <div class="alert alert-warning mb-0">
                        <i class="bi bi-exclamation-triangle mb-2" style="font-size: 2rem;"></i>
                        <p class="mb-0 small"><strong>Not Available Today</strong></p>
                        <p class="mb-0 small">This class is scheduled for <strong>@Model.Day</strong>, not today (@todayDay).</p>
                    </div>
                }
                else if (!isActive)
                {
                    <div class="alert alert-info mb-0">
                        <i class="bi bi-clock mb-2" style="font-size: 2rem;"></i>
                        <p class="mb-0 small"><strong>Class Not Active</strong></p>
                        <p class="mb-0 small">PIN can only be generated during class hours.</p>
                        @if (Model.StartTime.HasValue && currentTime < Model.StartTime.Value)
                        {
                            <p class="mb-0 small mt-2">Starts at <strong>@Model.StartTime.Value.ToString(@"hh\:mm")</strong></p>
                        }
                        else if (Model.EndTime.HasValue)
                        {
                            <p class="mb-0 small mt-2">Class ended at <strong>@Model.EndTime.Value.ToString(@"hh\:mm")</strong></p>
                        }
                    </div>
                }
                else if (hasSession)
                {
                    <!-- Show existing PIN -->
                    <div class="pin-display-large">
                        <div class="pin-label">6-DIGIT PIN CODE</div>
                        <div class="pin-code">@session.PinCode</div>
                        <button id="copyPinBtn" class="btn btn-outline-light btn-sm mt-2">
                            <i class="bi bi-clipboard"></i> Copy PIN
                        </button>
                    </div>
                    
                    <div class="qr-display mt-3">
                        <div class="qr-label mb-2">SCAN QR CODE</div>
                        <div id="qrCodeContainer" class="qr-container"></div>
                    </div>

                    <div class="alert alert-success mt-3 mb-0">
                        <i class="bi bi-check-circle"></i>
                        <small>PIN is active and ready for use</small>
                    </div>
                }
                else
                {
                    <!-- Generate PIN Button -->
                    <div class="generate-section">
                        <i class="bi bi-key-fill mb-3" style="font-size: 3rem; color: #6366f1;"></i>
                        <p class="mb-3"><strong>Ready to Take Attendance</strong></p>
                        <p class="text-muted small mb-3">Generate a PIN code for students to mark their attendance.</p>
                        <button id="generatePinBtn" class="btn btn-primary w-100" 
                                data-class-id="@Model.ClassId">
                            <i class="bi bi-key-fill me-2"></i>Generate PIN Code
                        </button>
                        <p class="text-muted small mt-2 mb-0">
                            <i class="bi bi-info-circle"></i> PIN can only be generated once
                        </p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Enrolled Students -->
<div class="row">
    <div class="col-12">
        <div class="dashboard-card">
            <div class="card-header-custom">
                <h6 class="card-title mb-0">
                    <i class="bi bi-people me-2"></i>Enrolled Students (@Model.Enrollments.Count)
                </h6>
            </div>
            <div class="table-responsive">
                <table class="table table-hover table-sm mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Student ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Enrollments != null && Model.Enrollments.Any())
                        {
                            @foreach (var enrollment in Model.Enrollments.OrderBy(e => e.Student.User.FullName))
                            {
                                var attendance = todayAttendances.FirstOrDefault(a => a.StudentId == enrollment.Student.StudentId);
                                <tr>
                                    <td><strong>@enrollment.Student.StudentId</strong></td>
                                    <td>@enrollment.Student.User.FullName</td>
                                    <td>@enrollment.Student.User.Email</td>
                                    <td>
                                        @if (attendance != null)
                                        {
                                            @if (attendance.Status == "Present")
                                            {
                                                <span class="badge bg-success">
                                                    <i class="bi bi-check-circle"></i> Present
                                                </span>
                                            }
                                            else if (attendance.Status == "Late")
                                            {
                                                <span class="badge bg-warning">
                                                    <i class="bi bi-clock-history"></i> Late
                                                </span>
                                            }
                                            else if (attendance.Status == "Absent")
                                            {
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-x-circle"></i> Absent
                                                </span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-clock"></i> Waiting
                                            </span>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted py-3">No students enrolled</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/qrcode@1.5.3/build/qrcode.min.js"></script>
    
    <style>
        .info-box {
            padding: 1rem;
            background: #f8fafc;
            border-radius: 8px;
            border-left: 3px solid #6366f1;
        }

        .info-label {
            font-size: 0.75rem;
            color: #64748b;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 0.375rem;
        }

        .info-value {
            font-size: 1rem;
            font-weight: 600;
            color: #1e293b;
        }

        .pin-display-large {
            background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
            border-radius: 12px;
            padding: 2rem 1.5rem;
            color: white;
        }

        .pin-label {
            font-size: 0.75rem;
            font-weight: 600;
            letter-spacing: 2px;
            opacity: 0.9;
            margin-bottom: 0.75rem;
        }

        .pin-code {
            font-size: 3rem;
            font-weight: 700;
            letter-spacing: 12px;
            font-family: 'Courier New', monospace;
            margin-bottom: 0.5rem;
        }

        .qr-display {
            padding: 1.5rem;
            background: #f8fafc;
            border-radius: 8px;
        }

        .qr-label {
            font-weight: 600;
            color: #64748b;
            font-size: 0.875rem;
            letter-spacing: 1px;
        }

        .qr-container {
            display: inline-block;
            padding: 1rem;
            background: white;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .generate-section {
            padding: 2rem 1rem;
        }

        .blink {
            animation: blink 1.5s infinite;
        }

        @@keyframes blink {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.3; }
        }
    </style>
    
    <script>
        $(document).ready(function() {
            @if (hasSession)
            {
                <text>
                // Generate QR Code
                const request = window.location;
                const baseUrl = `${request.protocol}//${request.host}`;
                const qrUrl = `${baseUrl}/Admin/AttendancePinEntry?pin=@session.PinCode`;

                new QRCode(document.getElementById("qrCodeContainer"), {
                    text: qrUrl,
                    width: 200,
                    height: 200,
                    colorDark: "#000000",
                    colorLight: "#ffffff",
                    correctLevel: QRCode.CorrectLevel.H
                });
                </text>
            }

            // Copy PIN button
            $('#copyPinBtn').click(function() {
                const pin = $('.pin-code').text().trim();
                navigator.clipboard.writeText(pin).then(function() {
                    $('#copyPinBtn').html('<i class="bi bi-check"></i> Copied!');
                    setTimeout(() => {
                        $('#copyPinBtn').html('<i class="bi bi-clipboard"></i> Copy PIN');
                    }, 2000);
                });
            });

            // Generate PIN button
            $('#generatePinBtn').click(function() {
                const btn = $(this);
                const classId = btn.data('class-id');

                if (!confirm('Generate PIN code for this class? This can only be done once.')) {
                    return;
                }

                btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-2"></span>Generating...');

                $.ajax({
                    url: '/Admin/GenerateAttendancePin',
                    type: 'POST',
                    data: { classId: classId },
                    success: function(response) {
                        if (response.success) {
                            alert('PIN generated successfully! The page will reload.');
                            location.reload();
                        } else {
                            alert('Error: ' + response.message);
                            btn.prop('disabled', false).html('<i class="bi bi-key-fill me-2"></i>Generate PIN Code');
                        }
                    },
                    error: function() {
                        alert('Failed to generate PIN. Please try again.');
                        btn.prop('disabled', false).html('<i class="bi bi-key-fill me-2"></i>Generate PIN Code');
                    }
                });
            });

            // Auto-refresh page every 30 seconds to update attendance status
            setInterval(function() {
                location.reload();
            }, 30000); // 30 seconds
        });
    </script>
}
