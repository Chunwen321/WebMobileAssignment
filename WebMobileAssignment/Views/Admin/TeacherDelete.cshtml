@model WebMobileAssignment.Models.Teacher
@{
    ViewBag.Title = "Delete Teacher";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var classCount = ViewBag.ClassCount ?? 0;
    var attendanceCount = ViewBag.AttendanceCount ?? 0;
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-trash-fill text-danger"></i> Delete Teacher</h5>
            <a asp-action="TeacherIndex" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <strong>@TempData["ErrorMessage"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="alert alert-danger border-danger" role="alert">
            <h5 class="alert-heading">
                <i class="bi bi-exclamation-triangle-fill"></i> Confirm Deletion
            </h5>
            <p>Are you sure you want to delete this teacher? This action cannot be undone.</p>
            <hr>
            @if (classCount > 0 || attendanceCount > 0)
            {
                <div class="mb-0">
                    <strong>?? Warning:</strong> This teacher has dependencies that will be affected:
                    <ul class="mb-0 mt-2">
                        @if (classCount > 0)
                        {
                            <li><strong>@classCount class(es)</strong> will be unassigned (teacher removed)</li>
                        }
                        @if (attendanceCount > 0)
                        {
                            <li><strong>@attendanceCount attendance record(s)</strong> will be updated (marked by teacher removed)</li>
                        }
                    </ul>
                </div>
            }
            else
            {
                <p class="mb-0">No classes or attendance records are associated with this teacher.</p>
            }
        </div>

        <div class="dashboard-card bg-white p-0 rounded shadow-sm overflow-hidden">
            <!-- Header Banner -->
            <div class="bg-light p-4 border-bottom">
                <div class="text-center">
                    <div class="display-1 text-secondary mb-2">
                        <i class="bi bi-person-workspace"></i>
                    </div>
                    <h3 class="mb-0">@Model.User.FullName</h3>
                    <span class="badge bg-danger mt-2">@Model.TeacherId</span>
                </div>
            </div>

            <!-- Details Body -->
            <div class="p-4">
                <div class="row">
                    <div class="col-md-6">
                        <h6 class="text-uppercase text-muted small fw-bold mb-3">Personal Information</h6>
                        <div class="mb-2">
                            <label class="small text-muted d-block">Email</label>
                            <span>@Model.User.Email</span>
                        </div>
                        <div class="mb-2">
                            <label class="small text-muted d-block">Phone Number</label>
                            <span>@(Model.PhoneNumber ?? "Not provided")</span>
                        </div>
                        <div class="mb-2">
                            <label class="small text-muted d-block">Account Status</label>
                            <span class="badge bg-@(Model.User.IsActive ? "success" : "secondary")">
                                @(Model.User.IsActive ? "Active" : "Inactive")
                            </span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <h6 class="text-uppercase text-muted small fw-bold mb-3">Professional Information</h6>
                        <div class="mb-2">
                            <label class="small text-muted d-block">Subject Taught</label>
                            <span>@(Model.SubjectTeach ?? "Not specified")</span>
                        </div>
                        <div class="mb-2">
                            <label class="small text-muted d-block">Hire Date</label>
                            <span>@Model.HireDate.ToString("dd MMM yyyy")</span>
                        </div>
                        <div class="mb-2">
                            <label class="small text-muted d-block">Account Created</label>
                            <span>@Model.User.CreatedDate.ToString("dd MMM yyyy")</span>
                        </div>
                    </div>
                </div>

                @if (classCount > 0)
                {
                    <div class="row mt-3 pt-3 border-top">
                        <div class="col-12">
                            <h6 class="text-uppercase text-muted small fw-bold mb-3">Assigned Classes</h6>
                            <div class="alert alert-warning">
                                <i class="bi bi-info-circle me-2"></i>
                                <strong>@classCount class(es) assigned:</strong>
                                <ul class="mb-0 mt-2">
                                    @foreach (var cls in Model.Classes)
                                    {
                                        <li>@cls.ClassName (@cls.ClassId)</li>
                                    }
                                </ul>
                                <small class="d-block mt-2 text-muted">These classes will have their teacher assignment removed.</small>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Footer Actions -->
            <div class="bg-light p-3 border-top">
                <form asp-action="TeacherDelete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.TeacherId" />
                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="TeacherIndex" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you absolutely sure you want to delete @Model.User.FullName?\n\n@(classCount > 0 ? $"{classCount} class(es) will be unassigned.\n" : "")@(attendanceCount > 0 ? $"{attendanceCount} attendance record(s) will be updated.\n" : "")\n\nThis action cannot be undone.');">
                            <i class="bi bi-trash-fill"></i> Yes, Delete Teacher
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
