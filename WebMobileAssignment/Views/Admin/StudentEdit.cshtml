@model WebMobileAssignment.Models.Student
@{
    ViewBag.Title = "Edit Student";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-pencil-square"></i> Edit Student</h5>
            <a asp-action="StudentIndex" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <strong>@TempData["ErrorMessage"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-12">
        <div class="dashboard-card bg-white p-4 rounded shadow-sm">
            <form asp-action="StudentEdit" method="post">
                @Html.AntiForgeryToken()
                
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>Error!</strong> Please correct the following errors:
                        <ul class="mb-0 mt-2">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        </ul>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                
                <input type="hidden" name="studentId" value="@Model.StudentId" />

                <!-- Header with ID display -->
                <div class="alert alert-light border d-flex align-items-center mb-4" role="alert">
                    <i class="bi bi-info-circle-fill text-info me-2"></i>
                    <div>
                        Editing details for Student ID: <strong>@Model.StudentId</strong>
                    </div>
                </div>

                <h6 class="text-muted mb-3 border-bottom pb-2">
                    <i class="bi bi-person-fill text-danger me-2"></i>Personal Information
                </h6>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="fullName" class="form-label">Full Name <span class="text-danger">*</span></label>
                        <input type="text" id="fullName" name="fullName" class="form-control" value="@Model.User.FullName" required />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="email" class="form-label">Email Address <span class="text-danger">*</span></label>
                        <input type="email" id="email" name="email" class="form-control" value="@Model.User.Email" required />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="dateOfBirth" class="form-label">Date of Birth <span class="text-danger">*</span></label>
                        <input type="date" id="dateOfBirth" name="dateOfBirth" class="form-control" value="@Model.DateOfBirth?.ToString("yyyy-MM-dd")" required />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="phoneNumber" class="form-label">Phone Number</label>
                        <input type="tel" id="phoneNumber" name="phoneNumber" class="form-control" placeholder="e.g. 012-345-6789" value="@Model.User.PhoneNumber" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="gender" class="form-label">Gender <span class="text-danger">*</span></label>
                        <select id="gender" name="gender" class="form-select" required>
                            <option value="">-- Select Gender --</option>
                            <option value="Male" selected="@(Model.Gender == "Male")">Male</option>
                            <option value="Female" selected="@(Model.Gender == "Female")">Female</option>
                        </select>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="status" class="form-label">Account Status <span class="text-danger">*</span></label>
                        <select id="status" name="status" class="form-select" required>
                            <option value="active" selected="@(Model.User.Status == "active")">Active</option>
                            <option value="inactive" selected="@(Model.User.Status == "inactive")">Inactive</option>
                            <option value="suspend" selected="@(Model.User.Status == "suspend")">Suspend</option>
                            <option value="withdraw" selected="@(Model.User.Status == "withdraw")">Withdraw</option>
                        </select>
                        <small class="text-muted">
                            Current status: 
                            @{
                                var statusClass = Model.User.Status?.ToLower() switch
                                {
                                    "active" => "success",
                                    "inactive" => "secondary",
                                    "suspend" => "warning",
                                    "withdraw" => "danger",
                                    _ => "secondary"
                                };
                            }
                            <span class="badge bg-@statusClass">@Model.User.Status</span>
                        </small>
                    </div>
                </div>

                <h6 class="text-muted mb-3 mt-3 border-bottom pb-2">
                    <i class="bi bi-book-fill text-danger me-2"></i>Class Enrollment Management
                </h6>
                
                <!-- Current Enrollments -->
                @if (Model.Enrollments != null && Model.Enrollments.Any())
                {
                    <div class="mb-3">
                        <label class="form-label">Current Enrollments (@Model.Enrollments.Count):</label>
                        <div class="row g-2">
                            @foreach (var enrollment in Model.Enrollments)
                            {
                                <div class="col-md-6">
                                    <div class="alert alert-info d-flex justify-content-between align-items-center mb-0 p-2">
                                        <div>
                                            <i class="bi bi-book me-1"></i>
                                            <strong>@enrollment.Class?.ClassName</strong> (@enrollment.ClassId)
                                            <br />
                                            <small class="text-muted">Enrolled: @enrollment.EnrolledDate.ToString("MMM dd, yyyy")</small>
                                        </div>
                                        <button type="button" class="btn btn-sm btn-outline-danger" 
                                                onclick="removeEnrollment('@enrollment.ClassId', '@enrollment.Class?.ClassName')">
                                            <i class="bi bi-x-lg"></i>
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning mb-3">
                        <i class="bi bi-exclamation-triangle me-2"></i>No current class enrollments
                    </div>
                }
                
                <div class="row">
                    <!-- Add New Classes -->
                    <div class="col-md-6 mb-3">
                        <label for="classIds" class="form-label">Add New Classes (Multiple Selection)</label>
                        <select id="classIds" name="classIds" class="form-select" multiple size="8">
                            @if (ViewBag.Classes != null)
                            {
                                var enrolledClassIds = Model.Enrollments?.Select(e => e.ClassId).ToList() ?? new List<string>();
                                foreach (var cls in ViewBag.Classes)
                                {
                                    var isEnrolled = enrolledClassIds.Contains(cls.ClassId);
                                    var availableSlots = cls.MaxCapacity - cls.CurrentCapacity;
                                    var isFull = availableSlots <= 0;
                                    var capacityText = isFull ? "FULL" : $"{availableSlots}/{cls.MaxCapacity} available";
                                    
                                    if (!isEnrolled)
                                    {
                                        <option value="@cls.ClassId" 
                                                disabled="@isFull"
                                                data-capacity="@availableSlots"
                                                data-max="@cls.MaxCapacity"
                                                data-current="@cls.CurrentCapacity">
                                            @cls.ClassName (@cls.ClassId) - @capacityText
                                        </option>
                                    }
                                }
                            }
                        </select>
                        <small class="text-muted">
                            <i class="bi bi-info-circle me-1"></i>Hold Ctrl to select multiple. Only non-enrolled classes shown.
                        </small>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label for="parentId" class="form-label">Assigned Parent</label>
                        <select id="parentId" name="parentId" class="form-select">
                            <option value="">-- No Parent Assigned --</option>
                            @if (ViewBag.Parents != null)
                            {
                                @foreach (var parent in ViewBag.Parents)
                                {
                                    <option value="@parent.ParentId" selected="@(Model.ParentId == parent.ParentId)">
                                        @parent.User.FullName (@parent.ParentId)
                                    </option>
                                }
                            }
                        </select>
                        
                        <div class="mt-3">
                            <label class="form-label d-block">Selected New Classes:</label>
                            <div id="selectedClassesList" class="border rounded p-2 bg-light" style="min-height: 100px; max-height: 150px; overflow-y: auto;">
                                <small class="text-muted">No new classes selected</small>
                            </div>
                            <small class="text-muted mt-2 d-block">
                                <strong id="selectedCount">0</strong> new class(es) selected
                            </small>
                        </div>
                    </div>
                </div>
                
                <!-- Hidden fields for removals -->
                <input type="hidden" id="removeClassIds" name="removeClassIds" value="" />

                <div class="row mt-4">
                    <div class="col-12 text-end">
                        <a asp-action="StudentIndex" class="btn btn-light me-2">Cancel</a>
                        <button type="submit" class="btn btn-danger px-4">
                            <i class="bi bi-check-circle"></i> Update Student
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        (function() {
            const classSelect = document.getElementById('classIds');
            const selectedClassesList = document.getElementById('selectedClassesList');
            const selectedCount = document.getElementById('selectedCount');
            const removeClassIdsInput = document.getElementById('removeClassIds');
            const removedClasses = [];

            // Class selection handler
            if (classSelect) {
                classSelect.addEventListener('change', function() {
                    updateSelectedClassesList();
                });
                
                // Initial update
                updateSelectedClassesList();
                
                // Add visual styling to options based on capacity
                updateClassOptionsStyles();
            }

            function updateClassOptionsStyles() {
                const options = classSelect.querySelectorAll('option');
                options.forEach(option => {
                    const availableSlots = parseInt(option.getAttribute('data-capacity')) || 0;
                    const isFull = availableSlots <= 0;
                    
                    if (isFull) {
                        option.style.color = '#dc3545'; // Red for full
                        option.style.fontWeight = 'bold';
                    } else if (availableSlots <= 5) {
                        option.style.color = '#ffc107'; // Yellow for limited
                    } else {
                        option.style.color = '#198754'; // Green for available
                    }
                });
            }

            function updateSelectedClassesList() {
                const selectedOptions = Array.from(classSelect.selectedOptions);
                
                if (selectedOptions.length === 0) {
                    selectedClassesList.innerHTML = '<small class="text-muted">No new classes selected</small>';
                    selectedCount.textContent = '0';
                } else {
                    const html = selectedOptions.map((option) => {
                        const availableSlots = option.getAttribute('data-capacity');
                        const maxCapacity = option.getAttribute('data-max');
                        const currentCapacity = option.getAttribute('data-current');
                        const classText = option.text;
                        
                        return `<div class="mb-2 p-2 bg-white border rounded">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <i class="bi bi-book me-1 text-danger"></i>
                                            <strong>${classText.split(' - ')[0]}</strong>
                                        </div>
                                        <span class="badge bg-success">${currentCapacity}/${maxCapacity}</span>
                                    </div>
                                    <small class="text-muted d-block mt-1">
                                        <i class="bi bi-people me-1"></i>${availableSlots} slot(s) available
                                    </small>
                                </div>`;
                    }).join('');
                    selectedClassesList.innerHTML = html;
                    selectedCount.textContent = selectedOptions.length;
                }
            }

            // Global function for removing enrollments
            window.removeEnrollment = function(classId, className) {
                if (confirm(`Are you sure you want to remove enrollment from "${className}"?`)) {
                    removedClasses.push(classId);
                    removeClassIdsInput.value = removedClasses.join(',');
                    
                    // Update UI - find and fade out the enrollment card
                    const enrollmentCards = document.querySelectorAll('.alert-info');
                    enrollmentCards.forEach(card => {
                        if (card.textContent.includes(classId)) {
                            card.style.opacity = '0.5';
                            card.style.textDecoration = 'line-through';
                            const btn = card.querySelector('button');
                            if (btn) {
                                btn.disabled = true;
                                btn.innerHTML = '<i class="bi bi-check-lg"></i> Removed';
                                btn.classList.remove('btn-outline-danger');
                                btn.classList.add('btn-secondary');
                            }
                        }
                    });
                }
            };
        })();
    </script>
}
