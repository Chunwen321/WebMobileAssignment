@model WebMobileAssignment.Models.Student
@{
    ViewBag.Title = "Edit Student";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-pencil-square"></i> Edit Student</h5>
            <a asp-action="StudentIndex" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <strong>@TempData["ErrorMessage"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-12">
        <div class="dashboard-card bg-white p-4 rounded shadow-sm">
            <form asp-action="StudentEdit" method="post">
                @Html.AntiForgeryToken()
                
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>Error!</strong> Please correct the following errors:
                        <ul class="mb-0 mt-2">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        </ul>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                
                <input type="hidden" name="studentId" value="@Model.StudentId" />

                <!-- Header with ID display -->
                <div class="alert alert-light border d-flex align-items-center mb-4" role="alert">
                    <i class="bi bi-info-circle-fill text-info me-2"></i>
                    <div>
                        Editing details for Student ID: <strong>@Model.StudentId</strong>
                    </div>
                </div>

                <h6 class="text-muted mb-3">Personal Information</h6>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="fullName" class="form-label">Full Name</label>
                        <input type="text" id="fullName" name="fullName" class="form-control" value="@Model.User.FullName" required />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="email" class="form-label">Email Address</label>
                        <input type="email" id="email" name="email" class="form-control" value="@Model.User.Email" required />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="dateOfBirth" class="form-label">Date of Birth</label>
                        <input type="date" id="dateOfBirth" name="dateOfBirth" class="form-control" value="@Model.DateOfBirth.ToString("yyyy-MM-dd")" required />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="gender" class="form-label">Gender</label>
                        <select id="gender" name="gender" class="form-select" required>
                            <option value="Male" selected="@(Model.Gender == "Male")">Male</option>
                            <option value="Female" selected="@(Model.Gender == "Female")">Female</option>
                        </select>
                    </div>
                </div>

                <h6 class="text-muted mb-3 mt-3">Academic Details</h6>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="classId" class="form-label">Assigned Class</label>
                        <select id="classId" name="classId" class="form-select">
                            <option value="">-- No Class Assigned --</option>
                            @if (ViewBag.Classes != null)
                            {
                                @foreach (var cls in ViewBag.Classes)
                                {
                                    <option value="@cls.ClassId" selected="@(Model.ClassId == cls.ClassId)">
                                        @cls.ClassName (@cls.ClassId)
                                    </option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="parentId" class="form-label">Assigned Parent</label>
                        <select id="parentId" name="parentId" class="form-select">
                            <option value="">-- No Parent Assigned --</option>
                            @if (ViewBag.Parents != null)
                            {
                                @foreach (var parent in ViewBag.Parents)
                                {
                                    <option value="@parent.ParentId" selected="@(Model.ParentId == parent.ParentId)">
                                        @parent.User.FullName (@parent.ParentId)
                                    </option>
                                }
                            }
                        </select>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-12 text-end">
                        <a asp-action="StudentIndex" class="btn btn-light me-2">Cancel</a>
                        <button type="submit" class="btn btn-danger px-4">
                            <i class="bi bi-check-circle"></i> Update Student
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
