@model IEnumerable<WebMobileAssignment.Models.Parent>
@{
    ViewBag.Title = "Parent Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-people-fill"></i> Parent List</h5>
            <a asp-action="ParentCreate" class="btn btn-danger">
                <i class="bi bi-plus-circle"></i> Add New Parent
            </a>
        </div>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>
        <strong>@TempData["SuccessMessage"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <strong>@TempData["ErrorMessage"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-12">
        <div class="dashboard-card">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Children</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model?.Count() > 0)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><strong>@item.ParentId</strong></td>
                                    <td>@item.User.FullName</td>
                                    <td>@item.User.Email</td>
                                    <td>@(item.PhoneNumber ?? "N/A")</td>
                                    <td>
                                        @if (item.Students != null && item.Students.Any())
                                        {
                                            <span class="badge bg-info text-dark">@item.Students.Count() child(ren)</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No children</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-@(item.User.IsActive ? "success" : "secondary")">
                                            @(item.User.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="ParentDetails" asp-route-id="@item.ParentId" class="btn btn-outline-info" title="View">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="ParentEdit" asp-route-id="@item.ParentId" class="btn btn-outline-warning" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="ParentDelete" asp-route-id="@item.ParentId" class="btn btn-outline-danger" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted py-4">No parents found</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>