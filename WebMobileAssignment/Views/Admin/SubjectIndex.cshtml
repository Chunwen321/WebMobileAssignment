@model IEnumerable<WebMobileAssignment.Models.Subject>
@{
    ViewBag.Title = "Subject Management";
    ViewBag.ActiveMenu = "ClassManagement";
    ViewBag.ActiveSubmenu = "Subjects";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>
        <strong>@TempData["SuccessMessage"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <strong>@TempData["ErrorMessage"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Header Section -->
<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="mb-2">
                    <i class="bi bi-journals text-danger me-2"></i>
                    Subject Management
                </h2>
                <p class="text-muted">Manage all subjects and their assignments</p>
            </div>
            <div>
                <a asp-action="SubjectCreate" class="btn btn-danger">
                    <i class="bi bi-plus-circle me-2"></i>Add New Subject
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Quick Stats -->
<div class="row g-3 mb-4">
    <div class="col-xl-3 col-md-6">
        <div class="stat-card" style="border-left-color: #0d6efd;">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <div class="stat-label">Total Subjects</div>
                    <div class="stat-value text-primary">@Model.Count()</div>
                </div>
                <div class="card-icon blue">
                    <i class="bi bi-journals"></i>
                </div>
            </div>
            <div class="stat-change">
                <i class="bi bi-book me-1"></i>
                <span>Available subjects</span>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="stat-card" style="border-left-color: #198754;">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <div class="stat-label">Assigned Classes</div>
                    <div class="stat-value text-success">@Model.Sum(s => s.Classes?.Count ?? 0)</div>
                </div>
                <div class="card-icon green">
                    <i class="bi bi-book-half"></i>
                </div>
            </div>
            <div class="stat-change">
                <i class="bi bi-arrow-up me-1"></i>
                <span>Classes with subjects</span>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="stat-card" style="border-left-color: #ffc107;">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <div class="stat-label">Total Students</div>
                    <div class="stat-value text-warning">@Model.Sum(s => s.Classes?.Sum(c => c.CurrentCapacity) ?? 0)</div>
                </div>
                <div class="card-icon yellow">
                    <i class="bi bi-people"></i>
                </div>
            </div>
            <div class="stat-change">
                <i class="bi bi-graph-up me-1"></i>
                <span>Enrolled students</span>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="stat-card" style="border-left-color: #dc3545;">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <div class="stat-label">Avg Classes/Subject</div>
                    <div class="stat-value text-danger">
                        @{
                            var avgClasses = Model.Any() ? (decimal)Model.Sum(s => s.Classes?.Count ?? 0) / Model.Count() : 0;
                        }
                        @avgClasses.ToString("F1")
                    </div>
                </div>
                <div class="card-icon red">
                    <i class="bi bi-bar-chart"></i>
                </div>
            </div>
            <div class="stat-change">
                <i class="bi bi-diagram-3 me-1"></i>
                <span>Average distribution</span>
            </div>
        </div>
    </div>
</div>

<!-- Filter and Search -->
<div class="row mb-4">
    <div class="col-12">
        <div class="dashboard-card">
            <div class="card-header-custom">
                <h5 class="card-title">
                    <i class="bi bi-funnel"></i>
                    Filter Subjects
                </h5>
            </div>
            <div class="row g-3">
                <div class="col-md-10">
                    <label class="form-label">Search</label>
                    <input type="text" class="form-control" id="searchInput" placeholder="Search by subject name or ID...">
                </div>
                <div class="col-md-2">
                    <label class="form-label">&nbsp;</label>
                    <button class="btn btn-secondary w-100" onclick="clearFilters()">
                        <i class="bi bi-x-circle me-2"></i>Clear
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Subjects Grid -->
<div class="row">
    <div class="col-12">
        <div class="dashboard-card">
            <div class="card-header-custom">
                <h5 class="card-title">
                    <i class="bi bi-list-ul"></i>
                    All Subjects
                </h5>
                <div class="btn-group btn-group-sm" role="group">
                    <button type="button" class="btn btn-outline-danger active" onclick="toggleView('grid')">
                        <i class="bi bi-grid-3x3-gap"></i> Grid
                    </button>
                    <button type="button" class="btn btn-outline-danger" onclick="toggleView('list')">
                        <i class="bi bi-list"></i> List
                    </button>
                </div>
            </div>

            <!-- Grid View -->
            <div id="gridView" class="row g-3 p-3">
                @if (Model != null && Model.Any())
                {
                    @foreach (var subject in Model)
                    {
                        <div class="col-lg-4 col-md-6 subject-card" 
                             data-name="@subject.SubjectName.ToLower()" 
                             data-id="@subject.SubjectId.ToLower()">
                            <div class="dashboard-card h-100">
                                <div class="subject-header">
                                    <div class="subject-icon">
                                        <i class="bi bi-journal-text"></i>
                                    </div>
                                </div>
                                <div class="card-body text-center">
                                    <h5 class="mb-1">@subject.SubjectName</h5>
                                    <p class="text-muted small mb-3">@subject.SubjectId</p>

                                    <div class="subject-stats">
                                        <div class="stat-item">
                                            <i class="bi bi-book text-warning"></i>
                                            <div class="stat-info">
                                                <div class="stat-number">@(subject.Classes?.Count ?? 0)</div>
                                                <div class="stat-label">Classes</div>
                                            </div>
                                        </div>
                                        <div class="stat-item">
                                            <i class="bi bi-people text-info"></i>
                                            <div class="stat-info">
                                                <div class="stat-number">@(subject.Classes?.Sum(c => c.CurrentCapacity) ?? 0)</div>
                                                <div class="stat-label">Students</div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mt-3 d-flex gap-2">
                                        <a asp-action="SubjectDetails" asp-route-id="@subject.SubjectId" class="btn btn-sm btn-outline-primary flex-fill">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                        <a asp-action="SubjectEdit" asp-route-id="@subject.SubjectId" class="btn btn-sm btn-outline-warning flex-fill">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <a asp-action="SubjectDelete" asp-route-id="@subject.SubjectId" class="btn btn-sm btn-outline-danger flex-fill">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12">
                        <div class="text-center text-muted py-5">
                            <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                            <p class="mt-3">No subjects found</p>
                            <a asp-action="SubjectCreate" class="btn btn-danger">
                                <i class="bi bi-plus-circle me-2"></i>Add Your First Subject
                            </a>
                        </div>
                    </div>
                }
            </div>

            <!-- List View -->
            <div id="listView" class="d-none">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Subject ID</th>
                                <th>Subject Name</th>
                                <th>Classes</th>
                                <th>Students</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                @foreach (var subject in Model)
                                {
                                    <tr class="subject-row"
                                        data-name="@subject.SubjectName.ToLower()"
                                        data-id="@subject.SubjectId.ToLower()">
                                        <td><strong>@subject.SubjectId</strong></td>
                                        <td>@subject.SubjectName</td>
                                        <td><span class="badge bg-info">@(subject.Classes?.Count ?? 0)</span></td>
                                        <td><span class="badge bg-secondary">@(subject.Classes?.Sum(c => c.CurrentCapacity) ?? 0)</span></td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a asp-action="SubjectDetails" asp-route-id="@subject.SubjectId" class="btn btn-sm btn-outline-primary" title="View">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-action="SubjectEdit" asp-route-id="@subject.SubjectId" class="btn btn-sm btn-outline-warning" title="Edit">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-action="SubjectDelete" asp-route-id="@subject.SubjectId" class="btn btn-sm btn-outline-danger" title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // View Toggle
        function toggleView(view) {
            const gridView = document.getElementById('gridView');
            const listView = document.getElementById('listView');
            const buttons = document.querySelectorAll('.btn-group button');

            if (view === 'grid') {
                gridView.classList.remove('d-none');
                listView.classList.add('d-none');
                buttons[0].classList.add('active');
                buttons[1].classList.remove('active');
            } else {
                gridView.classList.add('d-none');
                listView.classList.remove('d-none');
                buttons[0].classList.remove('active');
                buttons[1].classList.add('active');
            }
        }

        // Filter functionality
        const searchInput = document.getElementById('searchInput');

        function filterSubjects() {
            const searchTerm = searchInput.value.toLowerCase();

            document.querySelectorAll('.subject-card, .subject-row').forEach(card => {
                const name = card.getAttribute('data-name');
                const id = card.getAttribute('data-id');

                let show = true;

                // Search filter
                if (searchTerm && !(name.includes(searchTerm) || id.includes(searchTerm))) {
                    show = false;
                }

                card.style.display = show ? '' : 'none';
            });
        }

        searchInput.addEventListener('input', filterSubjects);

        function clearFilters() {
            searchInput.value = '';
            filterSubjects();
        }
    </script>
}

<style>
    .subject-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 30px 20px;
        text-align: center;
        border-radius: 8px 8px 0 0;
    }

    .subject-icon {
        width: 80px;
        height: 80px;
        background: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
        font-size: 2.5rem;
        color: #667eea;
    }

    .subject-stats {
        display: flex;
        justify-content: space-around;
        padding: 15px 0;
        border-top: 1px solid #e0e0e0;
        border-bottom: 1px solid #e0e0e0;
        margin: 15px 0;
    }

    .subject-stats .stat-item {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .subject-stats .stat-item i {
        font-size: 1.5rem;
    }

    .subject-stats .stat-info {
        text-align: left;
    }

    .subject-stats .stat-number {
        font-size: 1.25rem;
        font-weight: 700;
        color: #333;
    }

    .subject-stats .stat-label {
        font-size: 0.75rem;
        color: #666;
        text-transform: uppercase;
    }
</style>
