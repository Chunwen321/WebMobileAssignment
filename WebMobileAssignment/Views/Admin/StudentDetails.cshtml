@model WebMobileAssignment.Models.Student
@{
    ViewBag.Title = "Student Details";
    ViewBag.ActiveMenu = "StudentManagement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    var totalEnrollments = ViewBag.TotalEnrollments ?? 0;
    var totalAttendance = ViewBag.TotalAttendance ?? 0;
    var presentCount = ViewBag.PresentCount ?? 0;
    var absentCount = ViewBag.AbsentCount ?? 0;
    var lateCount = ViewBag.LateCount ?? 0;
    var attendanceRate = ViewBag.AttendanceRate ?? 0;
    var yearsSinceEnrollment = ViewBag.YearsSinceEnrollment ?? 0;
    var age = ViewBag.Age ?? 0;
}

<!-- Header Section -->
<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="mb-2">
                    <i class="bi bi-person-badge-fill text-danger me-2"></i>
                    Student Details
                </h2>
                <p class="text-muted">Complete information about @Model.User.FullName</p>
            </div>
            <div>
                <a asp-action="StudentEdit" asp-route-id="@Model.StudentId" class="btn btn-warning me-2">
                    <i class="bi bi-pencil me-2"></i>Edit Details
                </a>
                <a asp-action="StudentIndex" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Back to List
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Profile Header Card -->
<div class="row mb-4">
    <div class="col-12">
        <div class="dashboard-card profile-header">
            <div class="profile-banner">
                <div class="profile-avatar-large @(Model.Gender == "Male" ? "male" : Model.Gender == "Female" ? "female" : "")">
                    <i class="bi bi-person-fill"></i>
                </div>
            </div>
            <div class="profile-info">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <h3 class="mb-1">@Model.User.FullName</h3>
                        <p class="text-muted mb-2">
                            <strong>Student ID:</strong> @Model.StudentId
                        </p>
                        <div class="d-flex gap-2 flex-wrap">
                            <span class="badge bg-@(Model.User.IsActive ? "success" : "secondary") px-3 py-2">
                                <i class="bi bi-@(Model.User.IsActive ? "check-circle" : "x-circle") me-1"></i>
                                @(Model.User.IsActive ? "Active" : "Inactive")
                            </span>
                            @if (!string.IsNullOrEmpty(Model.Gender))
                            {
                                <span class="badge bg-@Model.Gender px-3 py-2">
                                    <i class="bi bi-@(Model.Gender == "Male" ? "person" : "person-dress") me-1"></i>
                                    @Model.Gender
                                </span>
                            }
                            @if (age > 0)
                            {
                                <span class="badge bg-info px-3 py-2">
                                    <i class="bi bi-calendar-event me-1"></i>
                                    @age Years Old
                                </span>
                            }
                            @if (yearsSinceEnrollment > 0)
                            {
                                <span class="badge bg-primary px-3 py-2">
                                    <i class="bi bi-calendar-check me-1"></i>
                                    @yearsSinceEnrollment Years Enrolled
                                </span>
                            }
                        </div>
                    </div>
                    <div class="col-md-4 text-md-end mt-3 mt-md-0">
                        <div class="profile-quick-stats">
                            <div class="quick-stat-item">
                                <div class="quick-stat-number text-primary">@totalEnrollments</div>
                                <div class="quick-stat-label">Classes</div>
                            </div>
                            <div class="quick-stat-item">
                                <div class="quick-stat-number text-success">@attendanceRate%</div>
                                <div class="quick-stat-label">Attendance</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row g-3 mb-4">
    <div class="col-xl-3 col-md-6">
        <div class="stat-card" style="border-left-color: #0d6efd;">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="stat-label">Total Attendance</div>
                    <div class="stat-value text-primary">@totalAttendance</div>
                    <small class="text-muted">Records</small>
                </div>
                <div class="card-icon blue">
                    <i class="bi bi-clipboard-check"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="stat-card" style="border-left-color: #198754;">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="stat-label">Present</div>
                    <div class="stat-value text-success">@presentCount</div>
                    <small class="text-muted">Days present</small>
                </div>
                <div class="card-icon green">
                    <i class="bi bi-check-circle"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="stat-card" style="border-left-color: #dc3545;">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="stat-label">Absent</div>
                    <div class="stat-value text-danger">@absentCount</div>
                    <small class="text-muted">Days absent</small>
                </div>
                <div class="card-icon red">
                    <i class="bi bi-x-circle"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="stat-card" style="border-left-color: #ffc107;">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="stat-label">Late</div>
                    <div class="stat-value text-warning">@lateCount</div>
                    <small class="text-muted">Days late</small>
                </div>
                <div class="card-icon yellow">
                    <i class="bi bi-clock"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Details Section -->
<div class="row">
    <!-- Left Column - Personal & Parent Info -->
    <div class="col-lg-4 mb-4">
        <!-- Personal Information -->
        <div class="dashboard-card mb-3">
            <div class="card-header-custom">
                <h5 class="card-title">
                    <i class="bi bi-person-vcard"></i>
                    Personal Information
                </h5>
            </div>
            <div class="detail-list">
                <div class="detail-item">
                    <div class="detail-label">
                        <i class="bi bi-envelope"></i>
                        Email
                    </div>
                    <div class="detail-value">@Model.User.Email</div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">
                        <i class="bi bi-telephone"></i>
                        Phone Number
                    </div>
                    <div class="detail-value">@(Model.User.PhoneNumber ?? "Not provided")</div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">
                        <i class="bi bi-calendar-event"></i>
                        Date of Birth
                    </div>
                    <div class="detail-value">
                        @if (Model.DateOfBirth.HasValue)
                        {
                            @Model.DateOfBirth.Value.ToString("dd MMM yyyy")
                        }
                        else
                        {
                            <span class="text-muted">Not set</span>
                        }
                    </div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">
                        <i class="bi bi-gender-ambiguous"></i>
                        Gender
                    </div>
                    <div class="detail-value">@(Model.Gender ?? "Not specified")</div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">
                        <i class="bi bi-calendar-plus"></i>
                        Enrollment Date
                    </div>
                    <div class="detail-value">
                        @if (Model.EnrollmentDate.HasValue)
                        {
                            @Model.EnrollmentDate.Value.ToString("dd MMM yyyy")
                        }
                        else
                        {
                            <span class="text-muted">Not set</span>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Parent Information -->
        <div class="dashboard-card">
            <div class="card-header-custom">
                <h5 class="card-title">
                    <i class="bi bi-person-check"></i>
                    Parent/Guardian Information
                </h5>
            </div>
            @if (Model.Parent != null)
            {
                <div class="detail-list">
                    <div class="detail-item">
                        <div class="detail-label">
                            <i class="bi bi-person"></i>
                            Parent Name
                        </div>
                        <div class="detail-value">@Model.Parent.User.FullName</div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">
                            <i class="bi bi-envelope"></i>
                            Email
                        </div>
                        <div class="detail-value">@Model.Parent.User.Email</div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">
                            <i class="bi bi-telephone"></i>
                            Phone
                        </div>
                        <div class="detail-value">@(Model.Parent.PhoneNumber ?? "Not provided")</div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">
                            <i class="bi bi-tag"></i>
                            Parent ID
                        </div>
                        <div class="detail-value">@Model.Parent.ParentId</div>
                    </div>
                </div>
                <div class="mt-3 text-center">
                    <a asp-action="ParentDetails" asp-route-id="@Model.Parent.ParentId" class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-eye me-1"></i>View Parent Details
                    </a>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="bi bi-person-x" style="font-size: 3rem; color: #999;"></i>
                    <p class="text-muted mt-2 mb-0">No parent assigned</p>
                </div>
            }
        </div>
    </div>

    <!-- Right Column - Classes & Account Info -->
    <div class="col-lg-8">
        <!-- Enrolled Classes -->
        <div class="dashboard-card mb-3">
            <div class="card-header-custom">
                <h5 class="card-title">
                    <i class="bi bi-journal-bookmark"></i>
                    Enrolled Classes (@totalEnrollments)
                </h5>
            </div>
            @if (Model.Enrollments != null && Model.Enrollments.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Class ID</th>
                                <th>Class Name</th>
                                <th>Subject</th>
                                <th>Teacher</th>
                                <th>Schedule</th>
                                <th>Room</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var enrollment in Model.Enrollments)
                            {
                                <tr>
                                    <td><strong>@enrollment.Class.ClassId</strong></td>
                                    <td>@enrollment.Class.ClassName</td>
                                    <td>
                                        @if (enrollment.Class.Subject != null)
                                        {
                                            <span class="badge bg-primary">@enrollment.Class.Subject.SubjectName</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                    <td>
                                        @if (enrollment.Class.Teacher != null)
                                        {
                                            @enrollment.Class.Teacher.User.FullName
                                        }
                                        else
                                        {
                                            <span class="text-muted">TBA</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(enrollment.Class.Day))
                                        {
                                            <span class="badge bg-secondary">@enrollment.Class.Day</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>@(enrollment.Class.RoomNumber ?? "-")</td>
                                    <td>
                                        <a asp-action="ClassDetails" asp-route-id="@enrollment.Class.ClassId" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                    <p class="mt-3">No classes enrolled yet</p>
                    <a asp-action="StudentEdit" asp-route-id="@Model.StudentId" class="btn btn-sm btn-danger">
                        <i class="bi bi-plus-circle me-1"></i>Enroll in Classes
                    </a>
                </div>
            }
        </div>

        <!-- Attendance Chart (if data available) -->
        @if (totalAttendance > 0)
        {
            <div class="dashboard-card mb-3">
                <div class="card-header-custom">
                    <h5 class="card-title">
                        <i class="bi bi-bar-chart-line"></i>
                        Attendance Overview
                    </h5>
                </div>
                <div class="row text-center">
                    <div class="col-4">
                        <div class="attendance-pie-chart present">
                            <div class="percentage">@Math.Round((decimal)presentCount / totalAttendance * 100, 1)%</div>
                            <div class="label">Present</div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="attendance-pie-chart absent">
                            <div class="percentage">@Math.Round((decimal)absentCount / totalAttendance * 100, 1)%</div>
                            <div class="label">Absent</div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="attendance-pie-chart late">
                            <div class="percentage">@Math.Round((decimal)lateCount / totalAttendance * 100, 1)%</div>
                            <div class="label">Late</div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Account Information -->
        <div class="dashboard-card">
            <div class="card-header-custom">
                <h5 class="card-title">
                    <i class="bi bi-shield-check"></i>
                    Account Information
                </h5>
            </div>
            <div class="detail-list">
                <div class="detail-item">
                    <div class="detail-label">
                        <i class="bi bi-person-badge"></i>
                        User ID
                    </div>
                    <div class="detail-value">@Model.UserId</div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">
                        <i class="bi bi-tag"></i>
                        User Type
                    </div>
                    <div class="detail-value">
                        <span class="badge bg-info">@Model.User.UserType</span>
                    </div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">
                        <i class="bi bi-calendar-plus"></i>
                        Account Created
                    </div>
                    <div class="detail-value">@Model.User.CreatedDate.ToString("dd MMM yyyy HH:mm")</div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">
                        <i class="bi bi-activity"></i>
                        Account Status
                    </div>
                    <div class="detail-value">
                        <span class="badge bg-@(Model.User.Status == "active" ? "success" : "secondary")">
                            @Model.User.Status
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<style>
    .profile-avatar-large.male {
        color: #0d6efd !important;
    }

    .profile-avatar-large.female {
        color: #ec4899 !important;
    }

    .attendance-pie-chart {
        padding: 20px;
        border-radius: 12px;
        margin: 10px;
    }

    .attendance-pie-chart.present {
        background: linear-gradient(135deg, rgba(25, 135, 84, 0.1) 0%, rgba(25, 135, 84, 0.05) 100%);
        border: 2px solid #198754;
    }

    .attendance-pie-chart.absent {
        background: linear-gradient(135deg, rgba(220, 53, 69, 0.1) 0%, rgba(220, 53, 69, 0.05) 100%);
        border: 2px solid #dc3545;
    }

    .attendance-pie-chart.late {
        background: linear-gradient(135deg, rgba(255, 193, 7, 0.1) 0%, rgba(255, 193, 7, 0.05) 100%);
        border: 2px solid #ffc107;
    }

    .attendance-pie-chart .percentage {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 10px;
    }

    .attendance-pie-chart.present .percentage {
        color: #198754;
    }

    .attendance-pie-chart.absent .percentage {
        color: #dc3545;
    }

    .attendance-pie-chart.late .percentage {
        color: #ffc107;
    }

    .attendance-pie-chart .label {
        font-size: 0.875rem;
        color: #666;
        text-transform: uppercase;
        font-weight: 600;
    }
</style>
