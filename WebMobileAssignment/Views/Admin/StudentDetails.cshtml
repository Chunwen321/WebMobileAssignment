@model WebMobileAssignment.Models.Student
@{
    ViewBag.Title = "Student Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-person-lines-fill"></i> Student Details</h5>
            <a asp-action="StudentIndex" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="dashboard-card bg-white p-0 rounded shadow-sm overflow-hidden">
            <!-- Header Banner -->
            <div class="bg-light p-4 border-bottom text-center">
                <div class="display-1 text-secondary mb-2">
                    <i class="bi bi-person-circle"></i>
                </div>
                <h3 class="mb-0">@Model.User.FullName</h3>
                <span class="badge bg-danger mt-2">@Model.StudentId</span>
            </div>

            <!-- Details Body -->
            <div class="p-4">
                <div class="row g-4">
                    <!-- Left Column: Personal -->
                    <div class="col-md-6 border-end">
                        <h6 class="text-uppercase text-muted small fw-bold mb-3">Personal Information</h6>

                        <div class="mb-3">
                            <label class="small text-muted d-block">Email</label>
                            <strong>@Model.User.Email</strong>
                        </div>
                        <div class="mb-3">
                            <label class="small text-muted d-block">Date of Birth</label>
                            <span>@Model.DateOfBirth?.ToString("dd MMM yyyy")</span>
                        </div>
                        <div class="mb-3">
                            <label class="small text-muted d-block">Gender</label>
                            <span class="badge bg-@(Model.Gender == "Male" ? "primary" : "info")">
                                @(Model.Gender ?? "Not specified")
                            </span>
                        </div>
                        <div class="mb-3">
                            <label class="small text-muted d-block">Account Status</label>
                            <span class="badge bg-@(Model.User.IsActive ? "success" : "secondary")">
                                @(Model.User.IsActive ? "Active" : "Inactive")
                            </span>
                        </div>
                    </div>

                    <!-- Right Column: Academic -->
                    <div class="col-md-6 ps-md-4">
                        <h6 class="text-uppercase text-muted small fw-bold mb-3">Academic & Guardian</h6>

                        <div class="mb-3">
                            <label class="small text-muted d-block">Current Class</label>
                            @if (!string.IsNullOrEmpty(Model.ClassId))
                            {
                                <span class="badge bg-info text-dark">@Model.ClassId</span>
                            }
                            else
                            {
                                <span class="text-muted">Not assigned</span>
                            }
                        </div>
                        <div class="mb-3">
                            <label class="small text-muted d-block">Parent ID</label>
                            @if (Model.Parent != null)
                            {
                                <a asp-action="ParentDetails" asp-route-id="@Model.ParentId" class="text-decoration-none">
                                    @Model.ParentId
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">No parent assigned</span>
                            }
                        </div>
                        <div class="mb-3">
                            <label class="small text-muted d-block">Parent Name</label>
                            @if (Model.Parent != null)
                            {
                                <span>@Model.Parent.User.FullName</span>
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </div>
                        <div class="mb-3">
                            <label class="small text-muted d-block">Parent Contact</label>
                            @if (Model.Parent != null)
                            {
                                <span>@(Model.Parent.PhoneNumber ?? "Not provided")</span>
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </div>
                    </div>
                </div>

                <!-- Additional Information -->
                <div class="row mt-4 pt-4 border-top">
                    <div class="col-12">
                        <h6 class="text-uppercase text-muted small fw-bold mb-3">Account Information</h6>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="small text-muted d-block">User ID</label>
                                <span>@Model.UserId</span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="small text-muted d-block">Account Created</label>
                                <span>@Model.User.CreatedDate.ToString("dd MMM yyyy, hh:mm tt")</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Footer Actions -->
            <div class="bg-light p-3 border-top text-end">
                <a asp-action="StudentEdit" asp-route-id="@Model.StudentId" class="btn btn-warning me-2">
                    <i class="bi bi-pencil"></i> Edit Profile
                </a>
                <a asp-action="StudentDelete" asp-route-id="@Model.StudentId" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete Student
                </a>
            </div>
        </div>
    </div>
</div>
