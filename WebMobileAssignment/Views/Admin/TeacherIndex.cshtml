@model IEnumerable<WebMobileAssignment.Models.Teacher>
@{
    ViewBag.Title = "Teacher Management";
    ViewBag.ActiveMenu = "TeacherManagement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>
        <strong>@TempData["SuccessMessage"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <strong>@TempData["ErrorMessage"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Header Section -->
<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="mb-2">
                    <i class="bi bi-person-workspace text-danger me-2"></i>
                    Teacher Management
                </h2>
                <p class="text-muted">Manage all teachers, assignments, and professional details</p>
            </div>
            <div>
                <a asp-action="TeacherCreate" class="btn btn-danger">
                    <i class="bi bi-plus-circle me-2"></i>Add New Teacher
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Quick Stats -->
<div class="row g-3 mb-4">
    <div class="col-xl-3 col-md-6">
        <div class="stat-card" style="border-left-color: #0d6efd;">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <div class="stat-label">Total Teachers</div>
                    <div class="stat-value text-primary">@Model.Count()</div>
                </div>
                <div class="card-icon blue">
                    <i class="bi bi-person-workspace"></i>
                </div>
            </div>
            <div class="stat-change">
                <i class="bi bi-people me-1"></i>
                <span>Active faculty</span>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="stat-card" style="border-left-color: #198754;">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <div class="stat-label">Active Teachers</div>
                    <div class="stat-value text-success">@Model.Count(t => t.User.IsActive)</div>
                </div>
                <div class="card-icon green">
                    <i class="bi bi-check-circle"></i>
                </div>
            </div>
            <div class="stat-change">
                <i class="bi bi-arrow-up me-1"></i>
                <span>Currently active</span>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="stat-card" style="border-left-color: #ffc107;">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <div class="stat-label">Total Classes</div>
                    <div class="stat-value text-warning">@Model.Sum(t => t.Classes?.Count ?? 0)</div>
                </div>
                <div class="card-icon yellow">
                    <i class="bi bi-book"></i>
                </div>
            </div>
            <div class="stat-change">
                <i class="bi bi-graph-up me-1"></i>
                <span>Classes assigned</span>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="stat-card" style="border-left-color: #dc3545;">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <div class="stat-label">Avg Classes/Teacher</div>
                    <div class="stat-value text-danger">
                        @{
                            var avgClasses = Model.Any() ? (decimal)Model.Sum(t => t.Classes?.Count ?? 0) / Model.Count() : 0;
                        }
                        @avgClasses.ToString("F1")
                    </div>
                </div>
                <div class="card-icon red">
                    <i class="bi bi-bar-chart"></i>
                </div>
            </div>
            <div class="stat-change">
                <i class="bi bi-diagram-3 me-1"></i>
                <span>Average workload</span>
            </div>
        </div>
    </div>
</div>

<!-- Filter and Search -->
<div class="row mb-4">
    <div class="col-12">
        <div class="dashboard-card">
            <div class="card-header-custom">
                <h5 class="card-title">
                    <i class="bi bi-funnel"></i>
                    Filter Teachers
                </h5>
            </div>
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Search</label>
                    <input type="text" class="form-control" id="searchInput" placeholder="Search by name, email, or ID...">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Status</label>
                    <select class="form-select" id="statusFilter">
                        <option value="">All Status</option>
                        <option value="active">Active</option>
                        <option value="inactive">Inactive</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Subject</label>
                    <select class="form-select" id="subjectFilter">
                        <option value="">All Subjects</option>
                        @foreach (var subject in Model.Where(t => !string.IsNullOrEmpty(t.SubjectTeach)).Select(t => t.SubjectTeach).Distinct())
                        {
                            <option value="@subject">@subject</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">&nbsp;</label>
                    <button class="btn btn-secondary w-100" onclick="clearFilters()">
                        <i class="bi bi-x-circle me-2"></i>Clear
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Teachers Grid -->
<div class="row">
    <div class="col-12">
        <div class="dashboard-card">
            <div class="card-header-custom">
                <h5 class="card-title">
                    <i class="bi bi-list-ul"></i>
                    All Teachers
                </h5>
                <div class="btn-group btn-group-sm" role="group">
                    <button type="button" class="btn btn-outline-danger active" onclick="toggleView('grid')">
                        <i class="bi bi-grid-3x3-gap"></i> Grid
                    </button>
                    <button type="button" class="btn btn-outline-danger" onclick="toggleView('list')">
                        <i class="bi bi-list"></i> List
                    </button>
                </div>
            </div>

            <!-- Grid View -->
            <div id="gridView" class="row g-3 p-3">
                @if (Model != null && Model.Any())
                {
                    @foreach (var teacher in Model)
                    {
                        <div class="col-lg-4 col-md-6 teacher-card" 
                             data-name="@teacher.User.FullName.ToLower()" 
                             data-email="@teacher.User.Email.ToLower()"
                             data-id="@teacher.TeacherId.ToLower()"
                             data-status="@(teacher.User.IsActive ? "active" : "inactive")"
                             data-subject="@(teacher.SubjectTeach?.ToLower() ?? "")">
                            <div class="dashboard-card h-100">
                                <div class="teacher-header">
                                    <div class="teacher-avatar">
                                        <i class="bi bi-person-fill"></i>
                                    </div>
                                    <div class="teacher-status-badge">
                                        <span class="badge bg-@(teacher.User.IsActive ? "success" : "secondary")">
                                            @(teacher.User.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </div>
                                </div>
                                <div class="card-body text-center">
                                    <h5 class="mb-1">@teacher.User.FullName</h5>
                                    <p class="text-muted small mb-2">@teacher.TeacherId</p>
                                    <p class="text-primary small mb-3">
                                        <i class="bi bi-book me-1"></i>
                                        @(teacher.SubjectTeach ?? "Subject not assigned")
                                    </p>

                                    <div class="teacher-stats">
                                        <div class="stat-item">
                                            <i class="bi bi-mortarboard text-warning"></i>
                                            <div class="stat-info">
                                                <div class="stat-number">@(teacher.Classes?.Count ?? 0)</div>
                                                <div class="stat-label">Classes</div>
                                            </div>
                                        </div>
                                        <div class="stat-item">
                                            <i class="bi bi-people text-info"></i>
                                            <div class="stat-info">
                                                <div class="stat-number">@(teacher.Classes?.Sum(c => c.CurrentCapacity) ?? 0)</div>
                                                <div class="stat-label">Students</div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="teacher-contact mt-3">
                                        <p class="small mb-1">
                                            <i class="bi bi-envelope me-1"></i>
                                            @teacher.User.Email
                                        </p>
                                        <p class="small mb-0">
                                            <i class="bi bi-telephone me-1"></i>
                                            @(teacher.PhoneNumber ?? "N/A")
                                        </p>
                                    </div>

                                    <div class="mt-3 d-flex gap-2">
                                        <a asp-action="TeacherDetails" asp-route-id="@teacher.TeacherId" class="btn btn-sm btn-outline-primary flex-fill">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                        <a asp-action="TeacherEdit" asp-route-id="@teacher.TeacherId" class="btn btn-sm btn-outline-warning flex-fill">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <a asp-action="TeacherDelete" asp-route-id="@teacher.TeacherId" class="btn btn-sm btn-outline-danger flex-fill">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12">
                        <div class="text-center text-muted py-5">
                            <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                            <p class="mt-3">No teachers found</p>
                            <a asp-action="TeacherCreate" class="btn btn-danger">
                                <i class="bi bi-plus-circle me-2"></i>Add Your First Teacher
                            </a>
                        </div>
                    </div>
                }
            </div>

            <!-- List View -->
            <div id="listView" class="d-none">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Teacher ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Subject</th>
                                <th>Phone</th>
                                <th>Classes</th>
                                <th>Students</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                @foreach (var teacher in Model)
                                {
                                    <tr class="teacher-row"
                                        data-name="@teacher.User.FullName.ToLower()"
                                        data-email="@teacher.User.Email.ToLower()"
                                        data-id="@teacher.TeacherId.ToLower()"
                                        data-status="@(teacher.User.IsActive ? "active" : "inactive")"
                                        data-subject="@(teacher.SubjectTeach?.ToLower() ?? "")">
                                        <td><strong>@teacher.TeacherId</strong></td>
                                        <td>@teacher.User.FullName</td>
                                        <td>@teacher.User.Email</td>
                                        <td>@(teacher.SubjectTeach ?? "N/A")</td>
                                        <td>@(teacher.PhoneNumber ?? "N/A")</td>
                                        <td><span class="badge bg-info">@(teacher.Classes?.Count ?? 0)</span></td>
                                        <td><span class="badge bg-secondary">@(teacher.Classes?.Sum(c => c.CurrentCapacity) ?? 0)</span></td>
                                        <td>
                                            <span class="badge bg-@(teacher.User.IsActive ? "success" : "secondary")">
                                                @(teacher.User.IsActive ? "Active" : "Inactive")
                                            </span>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a asp-action="TeacherDetails" asp-route-id="@teacher.TeacherId" class="btn btn-sm btn-outline-primary" title="View">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-action="TeacherEdit" asp-route-id="@teacher.TeacherId" class="btn btn-sm btn-outline-warning" title="Edit">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-action="TeacherDelete" asp-route-id="@teacher.TeacherId" class="btn btn-sm btn-outline-danger" title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // View Toggle
        function toggleView(view) {
            const gridView = document.getElementById('gridView');
            const listView = document.getElementById('listView');
            const buttons = document.querySelectorAll('.btn-group button');

            if (view === 'grid') {
                gridView.classList.remove('d-none');
                listView.classList.add('d-none');
                buttons[0].classList.add('active');
                buttons[1].classList.remove('active');
            } else {
                gridView.classList.add('d-none');
                listView.classList.remove('d-none');
                buttons[0].classList.remove('active');
                buttons[1].classList.add('active');
            }
        }

        // Filter functionality
        const searchInput = document.getElementById('searchInput');
        const statusFilter = document.getElementById('statusFilter');
        const subjectFilter = document.getElementById('subjectFilter');

        function filterTeachers() {
            const searchTerm = searchInput.value.toLowerCase();
            const selectedStatus = statusFilter.value;
            const selectedSubject = subjectFilter.value.toLowerCase();

            document.querySelectorAll('.teacher-card, .teacher-row').forEach(card => {
                const name = card.getAttribute('data-name');
                const email = card.getAttribute('data-email');
                const id = card.getAttribute('data-id');
                const status = card.getAttribute('data-status');
                const subject = card.getAttribute('data-subject');

                let show = true;

                // Search filter
                if (searchTerm && !(name.includes(searchTerm) || email.includes(searchTerm) || id.includes(searchTerm))) {
                    show = false;
                }

                // Status filter
                if (selectedStatus && status !== selectedStatus) {
                    show = false;
                }

                // Subject filter
                if (selectedSubject && subject !== selectedSubject) {
                    show = false;
                }

                card.style.display = show ? '' : 'none';
            });
        }

        searchInput.addEventListener('input', filterTeachers);
        statusFilter.addEventListener('change', filterTeachers);
        subjectFilter.addEventListener('change', filterTeachers);

        function clearFilters() {
            searchInput.value = '';
            statusFilter.value = '';
            subjectFilter.value = '';
            filterTeachers();
        }
    </script>
}

<style>
    .teacher-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 30px 20px;
        text-align: center;
        position: relative;
        border-radius: 8px 8px 0 0;
    }

    .teacher-avatar {
        width: 80px;
        height: 80px;
        background: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
        font-size: 2.5rem;
        color: #667eea;
    }

    .teacher-status-badge {
        position: absolute;
        top: 10px;
        right: 10px;
    }

    .teacher-stats {
        display: flex;
        justify-content: space-around;
        padding: 15px 0;
        border-top: 1px solid #e0e0e0;
        border-bottom: 1px solid #e0e0e0;
        margin: 15px 0;
    }

    .teacher-stats .stat-item {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .teacher-stats .stat-item i {
        font-size: 1.5rem;
    }

    .teacher-stats .stat-info {
        text-align: left;
    }

    .teacher-stats .stat-number {
        font-size: 1.25rem;
        font-weight: 700;
        color: #333;
    }

    .teacher-stats .stat-label {
        font-size: 0.75rem;
        color: #666;
        text-transform: uppercase;
    }

    .teacher-contact {
        background: #f8f9fa;
        padding: 10px;
        border-radius: 6px;
    }

    .teacher-contact p {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
</style>
