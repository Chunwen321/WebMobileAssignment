@model WebMobileAssignment.Models.Student
@{
    ViewBag.Title = "Delete Student";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-trash-fill text-danger"></i> Delete Student</h5>
            <a asp-action="StudentIndex" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <strong>@TempData["ErrorMessage"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="alert alert-danger border-danger" role="alert">
            <h5 class="alert-heading">
                <i class="bi bi-exclamation-triangle-fill"></i> Confirm Deletion
            </h5>
            <p>Are you sure you want to delete this student? This action cannot be undone.</p>
            <hr>
            <p class="mb-0">All associated attendance records will be permanently removed.</p>
        </div>

        <div class="dashboard-card bg-white p-0 rounded shadow-sm overflow-hidden">
            <!-- Header Banner -->
            <div class="bg-light p-4 border-bottom">
                <div class="text-center">
                    <div class="display-1 text-secondary mb-2">
                        <i class="bi bi-person-circle"></i>
                    </div>
                    <h3 class="mb-0">@Model.User.FullName</h3>
                    <span class="badge bg-danger mt-2">@Model.StudentId</span>
                </div>
            </div>

            <!-- Details Body -->
            <div class="p-4">
                <div class="row">
                    <div class="col-md-6">
                        <h6 class="text-uppercase text-muted small fw-bold mb-3">Personal Information</h6>
                        <div class="mb-2">
                            <label class="small text-muted d-block">Email</label>
                            <span>@Model.User.Email</span>
                        </div>
                        <div class="mb-2">
                            <label class="small text-muted d-block">Date of Birth</label>
                            <span>@Model.DateOfBirth.ToString("dd MMM yyyy")</span>
                        </div>
                        <div class="mb-2">
                            <label class="small text-muted d-block">Gender</label>
                            <span>@(Model.Gender ?? "Not specified")</span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <h6 class="text-uppercase text-muted small fw-bold mb-3">Academic Information</h6>
                        <div class="mb-2">
                            <label class="small text-muted d-block">Current Class</label>
                            <span>@(Model.Class?.ClassName ?? "Not assigned")</span>
                        </div>
                        <div class="mb-2">
                            <label class="small text-muted d-block">Parent</label>
                            <span>@(Model.Parent?.User.FullName ?? "No parent assigned")</span>
                        </div>
                        <div class="mb-2">
                            <label class="small text-muted d-block">Account Created</label>
                            <span>@Model.User.CreatedDate.ToString("dd MMM yyyy")</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Footer Actions -->
            <div class="bg-light p-3 border-top">
                <form asp-action="StudentDelete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.StudentId" />
                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="StudentIndex" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you absolutely sure you want to delete @Model.User.FullName? This action cannot be undone.');">
                            <i class="bi bi-trash-fill"></i> Yes, Delete Student
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
