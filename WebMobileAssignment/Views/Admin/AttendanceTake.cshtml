@{
    ViewBag.Title = "Take Attendance";
    ViewBag.ActiveMenu = "AttendanceManagement";
    ViewBag.ActiveSubmenu = "Take";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    
    var sessions = ViewBag.Sessions as List<WebMobileAssignment.Models.AttendanceSession> ?? new List<WebMobileAssignment.Models.AttendanceSession>();
    var classes = ViewBag.Classes as List<WebMobileAssignment.Models.Class> ?? new List<WebMobileAssignment.Models.Class>();
    var todayDay = DateTime.Now.DayOfWeek.ToString();
}

<!-- Header Section -->
<div class="row mb-4">
    <div class="col-12">
        <h5 class="mb-1">
            <i class="bi bi-qr-code-scan text-danger me-2"></i>
            Take Attendance - @DateTime.Now.ToString("MMMM dd, yyyy")
        </h5>
        <p class="text-muted small">Today is <strong>@todayDay</strong>. Only classes scheduled for today can generate attendance.</p>
    </div>
</div>

<!-- Today's Classes -->
<div class="row">
    <div class="col-12">
        <div class="dashboard-card">
            <div class="card-header-custom">
                <h6 class="card-title mb-0">
                    <i class="bi bi-calendar-check me-2"></i>Today's Classes (@todayDay)
                </h6>
            </div>
            <div class="p-3">
                @if (classes != null && classes.Count > 0)
                {
                    var todayClasses = classes.Where(c => 
                        !string.IsNullOrEmpty(c.Day) && 
                        c.Day.Equals(todayDay, StringComparison.OrdinalIgnoreCase) &&
                        c.StartTime.HasValue && 
                        c.EndTime.HasValue
                    ).ToList();

                    if (todayClasses.Any())
                    {
                        <div class="row g-3">
                            @foreach (var cls in todayClasses)
                            {
                                var session = sessions.FirstOrDefault(s => s.ClassId == cls.ClassId);
                                var hasSession = session != null;
                                
                                // Safely get TimeSpan values
                                var startTime = cls.StartTime.Value;
                                var endTime = cls.EndTime.Value;
                                
                                // Check if class is currently active (within class hours)
                                var currentTime = DateTime.Now.TimeOfDay;
                                var isActive = currentTime >= startTime && currentTime <= endTime;
                                var isPast = currentTime > endTime;
                                var isUpcoming = currentTime < startTime;
                                
                                <div class="col-lg-4 col-md-6">
                                    <div class="class-card-vertical @(hasSession ? "has-pin" : "") @(isActive ? "active-now" : "")">
                                        <div class="class-header">
                                            <h6 class="class-name">@cls.ClassName</h6>
                                            <span class="class-badge">@cls.ClassId</span>
                                        </div>

                                        <div class="class-info">
                                            <div class="info-row">
                                                <i class="bi bi-clock"></i>
                                                <span>@startTime.ToString(@"hh\:mm") - @endTime.ToString(@"hh\:mm")</span>
                                            </div>
                                            <div class="info-row">
                                                <i class="bi bi-geo-alt"></i>
                                                <span>@(cls.RoomNumber ?? "No venue")</span>
                                            </div>
                                            <div class="info-row">
                                                <i class="bi bi-people"></i>
                                                <span>@cls.Enrollments.Count students</span>
                                            </div>
                                        </div>

                                        <div class="class-status">
                                            @if (isActive)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="bi bi-circle-fill blink"></i> Active Now
                                                </span>
                                            }
                                            else if (isPast)
                                            {
                                                <span class="badge bg-secondary">
                                                    <i class="bi bi-check-circle"></i> Ended
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-info">
                                                    <i class="bi bi-clock"></i> Upcoming
                                                </span>
                                            }
                                        </div>

                                        @if (hasSession)
                                        {
                                            <div class="pin-indicator">
                                                <i class="bi bi-shield-check text-success"></i>
                                                <span>PIN Generated</span>
                                            </div>
                                        }

                                        <a href="@Url.Action("AttendanceClassDetail", "Admin", new { id = cls.ClassId })" 
                                           class="btn btn-primary btn-sm w-100 mt-2">
                                            @if (hasSession)
                                            {
                                                <i class="bi bi-eye"></i> <text>View PIN & QR</text>
                                            }
                                            else if (isActive)
                                            {
                                                <i class="bi bi-key"></i> <text>Generate PIN</text>
                                            }
                                            else if (isUpcoming)
                                            {
                                                <i class="bi bi-clock"></i> <text>Not Started Yet</text>
                                            }
                                            else
                                            {
                                                <i class="bi bi-x-circle"></i> <text>Class Ended</text>
                                            }
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5 text-muted">
                            <i class="bi bi-calendar-x" style="font-size: 3rem;"></i>
                            <p class="mt-3 mb-2"><strong>No classes scheduled for @todayDay</strong></p>
                            <p class="small">Classes are only available for attendance on their scheduled day.</p>
                            <a href="/Admin/ScheduleIndex" class="btn btn-outline-primary btn-sm mt-2">
                                <i class="bi bi-calendar-week"></i> View Full Schedule
                            </a>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-5 text-muted">
                        <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                        <p class="mt-3">No classes found. Please add classes first.</p>
                        <a href="/Admin/ClassCreate" class="btn btn-primary btn-sm mt-2">
                            <i class="bi bi-plus-circle"></i> Add Class
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Recent Check-ins -->
<div class="row mt-3">
    <div class="col-12">
        <div class="dashboard-card">
            <div class="card-header-custom">
                <h6 class="card-title mb-0">
                    <i class="bi bi-list-check me-2"></i>Recent Check-ins Today <span id="checkinCount" class="badge bg-success">0</span>
                </h6>
            </div>
            <div class="table-responsive">
                <table class="table table-hover table-sm mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Time</th>
                            <th>Student</th>
                            <th>Class</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody id="recentCheckins">
                        <tr>
                            <td colspan="4" class="text-center text-muted py-3">
                                <i class="bi bi-inbox" style="font-size: 1.5rem;"></i>
                                <p class="mt-1 mb-0 small">No check-ins yet today</p>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .class-card-vertical {
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            padding: 1.25rem;
            background: white;
            transition: all 0.3s ease;
            position: relative;
        }

        .class-card-vertical:hover {
            border-color: #6366f1;
            box-shadow: 0 4px 12px rgba(99, 102, 241, 0.15);
            transform: translateY(-2px);
        }

        .class-card-vertical.active-now {
            border-color: #22c55e;
            background: linear-gradient(135deg, #f0fdf4 0%, #ffffff 100%);
        }

        .class-card-vertical.has-pin {
            border-color: #8b5cf6;
        }

        .class-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
            padding-bottom: 0.75rem;
            border-bottom: 1px solid #f1f5f9;
        }

        .class-name {
            font-size: 1.125rem;
            font-weight: 700;
            color: #1e293b;
            margin: 0;
        }

        .class-badge {
            font-size: 0.75rem;
            background: #f1f5f9;
            padding: 0.25rem 0.625rem;
            border-radius: 6px;
            color: #64748b;
            font-weight: 600;
        }

        .class-info {
            margin-bottom: 1rem;
        }

        .info-row {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-bottom: 0.5rem;
            font-size: 0.875rem;
            color: #64748b;
        }

        .info-row i {
            width: 18px;
            font-size: 1rem;
        }

        .class-status {
            margin-bottom: 0.75rem;
        }

        .class-status .badge {
            font-size: 0.75rem;
            padding: 0.375rem 0.75rem;
        }

        .pin-indicator {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem;
            background: #f0fdf4;
            border-radius: 6px;
            margin-bottom: 0.75rem;
            font-size: 0.875rem;
            color: #22c55e;
            font-weight: 600;
        }

        .pin-indicator i {
            font-size: 1.25rem;
        }

        .blink {
            animation: blink 1.5s infinite;
        }

        @@keyframes blink {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.3; }
        }

        .btn-sm {
            font-size: 0.875rem;
            padding: 0.5rem 1rem;
            font-weight: 600;
        }
    </style>
}
