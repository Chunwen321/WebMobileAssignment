@model WebMobileAssignment.Models.Parent
@{
    ViewBag.Title = "Edit Parent";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-pencil-square"></i> Edit Parent</h5>
            <a asp-action="ParentIndex" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <strong>@TempData["ErrorMessage"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-12">
        <div class="dashboard-card bg-white p-4 rounded shadow-sm">
            <form asp-action="ParentEdit" method="post">
                @Html.AntiForgeryToken()
                
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>Error!</strong> Please correct the following errors:
                        <ul class="mb-0 mt-2">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        </ul>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                
                <input type="hidden" name="parentId" value="@Model.ParentId" />

                <!-- Header with ID display -->
                <div class="alert alert-light border d-flex align-items-center mb-4" role="alert">
                    <i class="bi bi-info-circle-fill text-info me-2"></i>
                    <div>
                        Editing details for Parent ID: <strong>@Model.ParentId</strong>
                    </div>
                </div>

                <h6 class="text-muted mb-3">Parent Information</h6>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="fullName" class="form-label">Full Name <span class="text-danger">*</span></label>
                        <input type="text" id="fullName" name="fullName" class="form-control" value="@Model.User.FullName" required />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="email" class="form-label">Email Address <span class="text-danger">*</span></label>
                        <input type="email" id="email" name="email" class="form-control" value="@Model.User.Email" required />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="phoneNumber" class="form-label">Phone Number</label>
                        <input type="tel" id="phoneNumber" name="phoneNumber" class="form-control" value="@Model.PhoneNumber" placeholder="e.g. +1234567890" />
                    </div>
                </div>

                @if (Model.Students != null && Model.Students.Any())
                {
                    <div class="mt-3">
                        <h6 class="text-muted mb-3">Linked Students</h6>
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-2"></i>
                            This parent has <strong>@Model.Students.Count()</strong> linked student(s):
                            <ul class="mb-0 mt-2">
                                @foreach (var student in Model.Students)
                                {
                                    <li>@student.User.FullName (@student.StudentId)</li>
                                }
                            </ul>
                        </div>
                    </div>
                }

                <div class="row mt-4">
                    <div class="col-12 text-end">
                        <a asp-action="ParentIndex" class="btn btn-light me-2">Cancel</a>
                        <button type="submit" class="btn btn-danger px-4">
                            <i class="bi bi-check-circle"></i> Update Parent
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
