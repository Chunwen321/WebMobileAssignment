@model WebMobileAssignment.Models.Teacher
@{
    ViewBag.Title = "Edit Teacher";
    ViewBag.ActiveMenu = "TeacherManagement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-pencil-square"></i> Edit Teacher</h5>
            <a asp-action="TeacherIndex" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <strong>@TempData["ErrorMessage"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-12">
        <div class="dashboard-card bg-white p-4 rounded shadow-sm">
            <form asp-action="TeacherEdit" method="post">
                @Html.AntiForgeryToken()
                
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>Error!</strong> Please correct the following errors:
                        <ul class="mb-0 mt-2">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        </ul>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                
                <input type="hidden" name="teacherId" value="@Model.TeacherId" />

                <!-- Header with ID display -->
                <div class="alert alert-light border d-flex align-items-center mb-4" role="alert">
                    <i class="bi bi-info-circle-fill text-info me-2"></i>
                    <div>
                        Editing details for Teacher ID: <strong>@Model.TeacherId</strong>
                    </div>
                </div>

                <!-- Personal Information Section -->
                <h6 class="text-muted mb-3 border-bottom pb-2">
                    <i class="bi bi-person-circle me-2"></i>Personal Information
                </h6>
                <div class="row">
                    <!-- Full Name -->
                    <div class="col-md-6 mb-3">
                        <label for="fullName" class="form-label">Full Name <span class="text-danger">*</span></label>
                        <input type="text" id="fullName" name="fullName" class="form-control" value="@Model.User.FullName" required />
                    </div>

                    <!-- Email -->
                    <div class="col-md-6 mb-3">
                        <label for="email" class="form-label">Email Address <span class="text-danger">*</span></label>
                        <input type="email" id="email" name="email" class="form-control" value="@Model.User.Email" required />
                    </div>
                </div>

                <div class="row">
                    <!-- Phone Number -->
                    <div class="col-md-6 mb-3">
                        <label for="phoneNumber" class="form-label">Phone Number</label>
                        <input type="tel" id="phoneNumber" name="phoneNumber" class="form-control" value="@Model.PhoneNumber" placeholder="e.g. +60123456789" />
                    </div>

                    <!-- Date of Birth -->
                    <div class="col-md-6 mb-3">
                        <label for="dateOfBirth" class="form-label">Date of Birth</label>
                        <input type="date" id="dateOfBirth" name="dateOfBirth" class="form-control" value="@Model.User.DateOfBirth?.ToString("yyyy-MM-dd")" />
                    </div>
                </div>

                <div class="row">
                    <!-- Gender -->
                    <div class="col-md-6 mb-3">
                        <label for="gender" class="form-label">Gender</label>
                        <select id="gender" name="gender" class="form-select">
                            <option value="">-- Select Gender --</option>
                            <option value="Male" selected="@(Model.User.Gender == "Male")">Male</option>
                            <option value="Female" selected="@(Model.User.Gender == "Female")">Female</option>
                            <option value="Other" selected="@(Model.User.Gender == "Other")">Other</option>
                        </select>
                    </div>

                    <!-- Status -->
                    <div class="col-md-6 mb-3">
                        <label for="status" class="form-label">Status <span class="text-danger">*</span></label>
                        <select id="status" name="status" class="form-select" required>
                            <option value="active" selected="@(Model.User.Status == "active")">Active</option>
                            <option value="inactive" selected="@(Model.User.Status == "inactive")">Inactive</option>
                            <option value="suspend" selected="@(Model.User.Status == "suspend")">Suspended</option>
                        </select>
                    </div>
                </div>

                <!-- Professional Details Section -->
                <h6 class="text-muted mb-3 mt-4 border-bottom pb-2">
                    <i class="bi bi-briefcase me-2"></i>Professional Details
                </h6>
                <div class="row">
                    <!-- Subject Taught -->
                    <div class="col-md-6 mb-3">
                        <label for="subjectTeach" class="form-label">Primary Subject Taught</label>
                        <input type="text" id="subjectTeach" name="subjectTeach" class="form-control" value="@Model.SubjectTeach" placeholder="e.g. Mathematics, Science, English" />
                    </div>

                    <!-- Hire Date -->
                    <div class="col-md-6 mb-3">
                        <label for="hireDate" class="form-label">Hire Date <span class="text-danger">*</span></label>
                        <input type="date" id="hireDate" name="hireDate" class="form-control" value="@Model.HireDate?.ToString("yyyy-MM-dd")" required />
                    </div>
                </div>

                <div class="row">
                    <!-- Title -->
                    <div class="col-md-6 mb-3">
                        <label for="title" class="form-label">Title/Position</label>
                        <input type="text" id="title" name="title" class="form-control" value="@Model.Title" placeholder="e.g. Senior Teacher, HOD, Principal" />
                    </div>

                    <!-- Education -->
                    <div class="col-md-6 mb-3">
                        <label for="education" class="form-label">Highest Education</label>
                        <input type="text" id="education" name="education" class="form-control" value="@Model.Education" placeholder="e.g. PhD in Mathematics, Master in Education" />
                    </div>
                </div>

                <div class="row">
                    <!-- Skills -->
                    <div class="col-md-12 mb-3">
                        <label for="skill" class="form-label">Skills & Certifications</label>
                        <input type="text" id="skill" name="skill" class="form-control" value="@Model.Skill" placeholder="e.g. TESL Certified, Technology Integration Specialist" />
                    </div>
                </div>

                <div class="row">
                    <!-- Bio -->
                    <div class="col-md-12 mb-3">
                        <label for="bio" class="form-label">Biography/Professional Summary</label>
                        <textarea id="bio" name="bio" class="form-control" rows="4" placeholder="Brief professional background, teaching philosophy, or achievements...">@Model.Bio</textarea>
                        <small class="text-muted">Optional professional summary (max 1000 characters)</small>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-12 text-end">
                        <a asp-action="TeacherIndex" class="btn btn-light me-2">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-danger px-4">
                            <i class="bi bi-check-circle"></i> Update Teacher
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
