@{
    ViewBag.Title = "Change Password";
    ViewBag.ActiveMenu = "Settings";
    ViewBag.ActiveSubmenu = "ChangePassword";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>
        <strong>@TempData["SuccessMessage"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <strong>@TempData["ErrorMessage"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Change Password -->
<div class="dashboard-card mb-3">
    <div class="card-header-custom">
        <h5 class="card-title">
            <i class="bi bi-shield-lock"></i>
            Change Password
        </h5>
    </div>

    <form asp-action="ChangePassword" method="post">
        @Html.AntiForgeryToken()
        
        <div class="password-field-group mb-3">
            <label class="form-label fw-semibold">Current Password</label>
            <div class="password-input-wrapper">
                <i class="bi bi-lock-fill password-icon"></i>
                <input type="password" name="currentPassword" class="form-control password-input" placeholder="Enter current password" required>
            </div>
        </div>

        <div class="password-field-group mb-3">
            <label class="form-label fw-semibold">New Password</label>
            <div class="password-input-wrapper">
                <i class="bi bi-lock-fill password-icon"></i>
                <input type="password" name="newPassword" id="newPassword" class="form-control password-input" placeholder="Enter new password" minlength="8" required>
            </div>
            <small class="form-text text-muted d-block mt-1">
                <i class="bi bi-info-circle me-1"></i>Password must be at least 8 characters long
            </small>
        </div>

        <div class="password-field-group mb-3">
            <label class="form-label fw-semibold">Confirm New Password</label>
            <div class="password-input-wrapper">
                <i class="bi bi-lock-fill password-icon"></i>
                <input type="password" name="confirmPassword" id="confirmPassword" class="form-control password-input" placeholder="Confirm new password" required>
            </div>
        </div>

        <button type="submit" class="btn btn-danger px-4">
            <i class="bi bi-key-fill me-2"></i>Update Password
        </button>
        <button type="reset" class="btn btn-outline-secondary px-4">
            <i class="bi bi-x-circle me-2"></i>Reset
        </button>
    </form>
</div>

@section Scripts {
    <style>
        .dashboard-card {
            background: linear-gradient(to bottom, #ffffff 0%, #f8f9fa 100%);
            border: 1px solid #e9ecef;
            padding: 1.5rem;
        }

        .card-header-custom {
            margin-bottom: 1.5rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid #e9ecef;
        }

        .card-title {
            margin: 0;
            font-size: 1.25rem;
            font-weight: 600;
            color: #2c3e50;
        }

        .password-field-group {
            margin-bottom: 1rem;
        }

        .password-input-wrapper {
            position: relative;
            display: flex;
            align-items: center;
        }

        .password-icon {
            position: absolute;
            left: 1rem;
            color: #6c757d;
            font-size: 1.125rem;
            z-index: 10;
        }

        .password-input {
            padding-left: 3rem !important;
            border-radius: 8px;
            border: 1px solid #dee2e6;
            transition: all 0.3s ease;
        }

        .password-input:focus {
            border-color: #dc3545;
            box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25);
            padding-left: 3rem !important;
        }

        .btn {
            font-weight: 500;
        }
    </style>

    <script>
        // Client-side password validation
        document.querySelector('form').addEventListener('submit', function(e) {
            const newPassword = document.getElementById('newPassword').value;
            const confirmPassword = document.getElementById('confirmPassword').value;

            if (newPassword !== confirmPassword) {
                e.preventDefault();
                alert('New password and confirmation password do not match!');
                return false;
            }

            if (newPassword.length < 8) {
                e.preventDefault();
                alert('Password must be at least 8 characters long!');
                return false;
            }
        });
    </script>
}
