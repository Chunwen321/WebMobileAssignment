@model WebMobileAssignment.Models.Class
@{
    ViewBag.Title = "Delete Class";
    ViewBag.ActiveMenu = "ClassManagement";
    ViewBag.ActiveSubmenu = "Classes";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-trash-fill text-danger"></i> Delete Class</h5>
            <a asp-action="ClassIndex" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <strong>@TempData["ErrorMessage"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="alert alert-danger border-danger" role="alert">
            <h5 class="alert-heading">
                <i class="bi bi-exclamation-triangle-fill"></i> Confirm Deletion
            </h5>
            <p>Are you sure you want to delete this class? This action cannot be undone.</p>
            <hr>
            @if (Model.CurrentCapacity > 0)
            {
                <div class="mb-0">
                    <strong>?? Warning:</strong> This class has dependencies that will be affected:
                    <ul class="mb-0 mt-2">
                        <li><strong>@Model.CurrentCapacity student(s)</strong> are currently enrolled and will be unenrolled</li>
                        <li>All enrollment records will be permanently deleted</li>
                        <li>All attendance records for this class will be permanently deleted</li>
                    </ul>
                </div>
            }
            else
            {
                <p class="mb-0">No students are currently enrolled in this class.</p>
            }
        </div>

        <div class="dashboard-card bg-white p-0 rounded shadow-sm overflow-hidden">
            <!-- Header Banner -->
            <div class="bg-light p-4 border-bottom">
                <div class="text-center">
                    <div class="display-1 text-secondary mb-2">
                        <i class="bi bi-book"></i>
                    </div>
                    <h3 class="mb-0">@Model.ClassName</h3>
                    <span class="badge bg-danger mt-2">@Model.ClassId</span>
                </div>
            </div>

            <!-- Details Body -->
            <div class="p-4">
                <div class="row">
                    <div class="col-md-6">
                        <h6 class="text-uppercase text-muted small fw-bold mb-3">Class Information</h6>
                        <div class="mb-2">
                            <label class="small text-muted d-block">Class Name</label>
                            <span>@Model.ClassName</span>
                        </div>
                        <div class="mb-2">
                            <label class="small text-muted d-block">Subject</label>
                            <span>
                                @if (Model.Subject != null)
                                {
                                    @Model.Subject.SubjectName
                                }
                                else
                                {
                                    <span class="text-muted">Not assigned</span>
                                }
                            </span>
                        </div>
                        <div class="mb-2">
                            <label class="small text-muted d-block">Teacher</label>
                            <span>
                                @if (Model.Teacher != null)
                                {
                                    @Model.Teacher.User.FullName
                                }
                                else
                                {
                                    <span class="text-muted">Unassigned</span>
                                }
                            </span>
                        </div>
                        <div class="mb-2">
                            <label class="small text-muted d-block">Room</label>
                            <span>@(Model.RoomNumber ?? "Not set")</span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <h6 class="text-uppercase text-muted small fw-bold mb-3">Schedule & Capacity</h6>
                        <div class="mb-2">
                            <label class="small text-muted d-block">Day</label>
                            <span>@(Model.Day ?? "Not scheduled")</span>
                        </div>
                        <div class="mb-2">
                            <label class="small text-muted d-block">Time</label>
                            <span>
                                @if (Model.StartTime.HasValue && Model.EndTime.HasValue)
                                {
                                    var start = Model.StartTime.Value.ToString("hh\\:mm");
                                    var end = Model.EndTime.Value.ToString("hh\\:mm");
                                    @($"{start} - {end}")
                                }
                                else
                                {
                                    <span class="text-muted">Not set</span>
                                }
                            </span>
                        </div>
                        <div class="mb-2">
                            <label class="small text-muted d-block">Enrollment</label>
                            <span class="badge bg-info">@Model.CurrentCapacity/@Model.MaxCapacity</span>
                        </div>
                        <div class="mb-2">
                            <label class="small text-muted d-block">Occupancy Rate</label>
                            @{
                                var occupancyRate = Model.MaxCapacity > 0 ? (decimal)Model.CurrentCapacity / Model.MaxCapacity * 100 : 0;
                                var badgeClass = occupancyRate >= 100 ? "danger" : occupancyRate >= 90 ? "warning" : "success";
                            }
                            <span class="badge bg-@badgeClass">@occupancyRate.ToString("F1")%</span>
                        </div>
                    </div>
                </div>

                @if (Model.Enrollments != null && Model.Enrollments.Any())
                {
                    <div class="row mt-3 pt-3 border-top">
                        <div class="col-12">
                            <h6 class="text-uppercase text-muted small fw-bold mb-3">Enrolled Students (@Model.CurrentCapacity)</h6>
                            <div class="alert alert-warning">
                                <i class="bi bi-info-circle me-2"></i>
                                <strong>The following students will be unenrolled:</strong>
                                <div class="mt-2" style="max-height: 200px; overflow-y: auto;">
                                    <table class="table table-sm mb-0">
                                        <thead>
                                            <tr>
                                                <th>Student ID</th>
                                                <th>Name</th>
                                                <th>Email</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var enrollment in Model.Enrollments.OrderBy(e => e.Student.User.FullName))
                                            {
                                                <tr>
                                                    <td>@enrollment.Student.StudentId</td>
                                                    <td>@enrollment.Student.User.FullName</td>
                                                    <td>@enrollment.Student.User.Email</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <small class="d-block mt-2 text-muted">
                                    <i class="bi bi-exclamation-triangle"></i> 
                                    All enrollments and associated attendance records will be permanently deleted.
                                </small>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Footer Actions -->
            <div class="bg-light p-3 border-top">
                <form asp-action="ClassDelete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.ClassId" />
                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="ClassIndex" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-danger" onclick="return confirm('@(Model.CurrentCapacity > 0 ? $"Are you absolutely sure you want to delete {Model.ClassName}?\n\n{Model.CurrentCapacity} student(s) will be unenrolled.\nAll enrollment and attendance records will be deleted.\n\nThis action cannot be undone." : $"Are you absolutely sure you want to delete {Model.ClassName}?\n\nThis action cannot be undone.")');">
                            <i class="bi bi-trash-fill"></i> Yes, Delete Class
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
