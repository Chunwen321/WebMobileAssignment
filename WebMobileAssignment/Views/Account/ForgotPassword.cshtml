@{
    ViewBag.Title = "Forgot Password";
}

<div class="forgot-password-container">
    <div class="forgot-password-card">
        <h2 class="text-center mb-3">Password reset</h2>
        <p class="text-center text-muted mb-4">You will receive instructions for resetting your password.</p>

        @if (ViewBag.SuccessMessage != null)
        {
    <div class="alert alert-success" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>
    @ViewBag.SuccessMessage
            </div>
      }

        @if (ViewBag.ErrorMessage != null)
        {
    <div class="alert alert-danger" role="alert">
     <i class="bi bi-exclamation-triangle-fill me-2"></i>
     @ViewBag.ErrorMessage
       </div>
        }

        <form asp-controller="Account" asp-action="ForgotPassword" method="post">
     @Html.AntiForgeryToken()
          
            <div class="mb-3">
    <input type="email" class="form-control form-control-lg" id="email" name="email" 
           placeholder="Your email address" required>
            </div>

    <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
   <i class="bi bi-send me-2"></i>SEND
     </button>

         <div class="text-center">
                <a asp-controller="Account" asp-action="Login" class="text-decoration-none">
        <i class="bi bi-arrow-left me-1"></i>Back to Login
             </a>
          </div>
        </form>
    </div>
</div>

@section Scripts {
    <style>
      body {
            background: linear-gradient(135deg, #e0e0e0 0%, #f5f5f5 100%);
   min-height: 100vh;
         display: flex;
            align-items: center;
      justify-content: center;
 }

        .forgot-password-container {
    width: 100%;
       max-width: 500px;
            padding: 20px;
      }

   .forgot-password-card {
            background: white;
        border-radius: 10px;
            padding: 40px;
         box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
  }

        .forgot-password-card h2 {
            font-size: 2rem;
         font-weight: 600;
   color: #333;
       margin-bottom: 0.5rem;
   }

     .forgot-password-card .text-muted {
        font-size: 0.95rem;
    color: #666 !important;
      }

      .form-control {
     border: 2px solid #dee2e6;
         border-radius: 8px;
        padding: 12px 20px;
    font-size: 1rem;
        }

      .form-control:focus {
     border-color: #6c757d;
         box-shadow: 0 0 0 0.2rem rgba(108, 117, 125, 0.25);
   }

  .form-control::placeholder {
          color: #999;
        }

     .btn-primary {
   background: linear-gradient(135deg, #495057 0%, #6c757d 100%);
          border: none;
            border-radius: 8px;
     padding: 12px;
 font-weight: 600;
         font-size: 1rem;
    letter-spacing: 1px;
    transition: all 0.3s ease;
        }

.btn-primary:hover {
            background: linear-gradient(135deg, #343a40 0%, #495057 100%);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(73, 80, 87, 0.3);
        }

        .alert {
    border-radius: 8px;
            border: none;
        }

  a {
            color: #495057;
            transition: color 0.3s ease;
 }

        a:hover {
       color: #6c757d;
     }
  </style>
}
