@section Scripts {
    <!-- Chart.js CDN -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {

            // Function to read numbers (supports "90%" or "45")
            function readValue(id) {
                const el = document.getElementById(id);
                if (!el) return 0;

                let txt = el.textContent.trim();
                if (txt.endsWith('%')) {
                    return parseFloat(txt.replace('%', '')) || 0;
                }
                return parseFloat(txt.replace(/[^0-9.-]+/g, '')) || 0;
            }

            // Read values
            const presentRaw = readValue('presentCount');
            const absentRaw = readValue('absentCount');
            const lateRaw = readValue('lateCount');

            // Detect if they are percentages or absolute numbers
            const sum = presentRaw + absentRaw + lateRaw;

            let dataPercents;

            if (Math.abs(sum - 100) <= 1) {
                // Values already percentages
                dataPercents = [presentRaw, absentRaw, lateRaw];
            } else {
                // Convert absolute numbers to percentages
                const total = presentRaw + absentRaw + lateRaw || 1;
                dataPercents = [
                    Math.round((presentRaw / total) * 100),
                    Math.round((absentRaw / total) * 100),
                    Math.round((lateRaw / total) * 100)
                ];
            }

            const ctx = document.getElementById('attendanceChart').getContext('2d');

            // Create Doughnut Chart
            const chart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['Present', 'Absent', 'Late'],
                    datasets: [{
                        data: dataPercents,
                        backgroundColor: [
                            'rgba(2, 161, 69, 0.95)',   // Present (green)
                            'rgba(220, 53, 69, 0.95)',  // Absent (red)
                            'rgba(255, 193, 7, 0.95)'   // Late (yellow)
                        ],
                        borderWidth: 0,
                        hoverOffset: 6
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    cutout: '65%', // donut thickness
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                usePointStyle: true,
                                padding: 16
                            }
                        },
                        tooltip: {
                            callbacks: {
                                label: function (context) {
                                    const label = context.label || '';
                                    const value = context.parsed || 0;
                                    return label + ': ' + value + '%';
                                }
                            }
                        }
                    }
                }
            });

            // --- CENTER LABEL (Overlay) ---
            (function addCenterLabel() {
                const container = document.getElementById('attendanceChart').parentElement;

                const div = document.createElement('div');
                div.className = 'chart-center';
                div.style.position = 'absolute';
                div.style.left = '50%';
                div.style.top = '50%';
                div.style.transform = 'translate(-50%, -50%)';
                div.style.textAlign = 'center';
                div.style.pointerEvents = 'none';

                div.innerHTML = `
                    <div style="font-weight: 700; font-size: 1.4rem; color: #02a145;">
                        ${dataPercents[0]}%
                    </div>
                    <div style="font-size: 0.9rem; color: #6c757d;">
                        Present
                    </div>
                `;

                container.style.position = 'relative';
                container.appendChild(div);
            })();

        });
    </script>
}