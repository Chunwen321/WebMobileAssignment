@{
    ViewBag.Title = "My Classes";
    ViewBag.ActiveMenu = "Classes";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="mb-2">My Classes</h1>
            <p class="text-muted">View and track your enrolled classes</p>
        </div>
    </div>

    <!-- Filter and Search -->
    <div class="row mb-4">
        <div class="col-md-6">
            <input type="text" class="form-control" placeholder="Search classes by name or code...">
        </div>
        <div class="col-md-3">
            <select class="form-select">
                <option value="">All Semesters</option>
                <option value="1">Semester 1</option>
                <option value="2">Semester 2</option>
            </select>
        </div>
        <div class="col-md-3">
            <select class="form-select">
                <option value="">All Status</option>
                <option value="active">Active</option>
                <option value="completed">Completed</option>
            </select>
        </div>
    </div>

    <!-- Classes Grid -->
    <div class="row">
        <!-- Class Card 1 -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="dashboard-card class-card">
                <div class="class-header" style="background: linear-gradient(135deg, #0d6efd 0%, #0d5ee8 100%);">
                    <h5 class="mb-0 text-white">
                        <i class="bi bi-book"></i> Advanced Data Structures
                    </h5>
                </div>
                <div class="card-body">
                    <div class="class-meta mb-3">
                        <span class="badge bg-light text-dark">CS302</span>
                        <span class="badge bg-light text-dark">3 Credits</span>
                    </div>
                    <div class="class-info">
                        <div class="info-item">
                            <label>Instructor:</label>
                            <span>Dr. Jane Smith</span>
                        </div>
                        <div class="info-item">
                            <label>Schedule:</label>
                            <span>Mon, Wed, Fri - 10:00 AM</span>
                        </div>
                        <div class="info-item">
                            <label>Location:</label>
                            <span>Room 301, Building A</span>
                        </div>
                    </div>
                    <div class="class-stats mt-3 pt-3 border-top">
                        <div class="stat-row">
                            <span>Attendance:</span>
                            <strong class="text-success">92%</strong>
                        </div>
                        <div class="stat-row">
                            <span>Grade:</span>
                            <strong class="text-primary">A-</strong>
                        </div>
                    </div>
                    <button class="btn btn-primary btn-sm mt-3 w-100">View Details</button>
