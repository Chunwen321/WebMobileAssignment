@{
    ViewBag.Title = "Class Details";
    ViewBag.ActiveMenu = "Classes";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="mb-2">Advanced Data Structures</h1>
            <p class="text-muted">Sarah Johnson (ID: STU001) | Class Code: CS302 | Semester 1</p>
        </div>
    </div>

    <div class="row">
        <!-- Class Information -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="dashboard-card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle"></i> Class Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="detail-row">
                        <label class="label">Instructor:</label>
                        <span class="value">Dr. Jane Smith</span>
                    </div>
                    <div class="detail-row">
                        <label class="label">Schedule:</label>
                        <span class="value">Mon, Wed, Fri - 10:00 AM</span>
                    </div>
                    <div class="detail-row">
                        <label class="label">Location:</label>
                        <span class="value">Room 301, Building A</span>
                    </div>
                    <div class="detail-row">
                        <label class="label">Credits:</label>
                        <span class="value">3</span>
                    </div>
                    <div class="detail-row">
                        <label class="label">Status:</label>
                        <span class="value">
                            <span class="badge bg-primary">Active</span>
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Child's Performance -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="dashboard-card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-graph-up"></i> Performance Overview
                    </h5>
                </div>
                <div class="card-body">
                    <div class="perf-row">
                        <span>Attendance:</span>
                        <strong class="text-success">92%</strong>
                    </div>
                    <div class="perf-row">
                        <span>Current Grade:</span>
                        <strong class="text-primary">A- (89%)</strong>
                    </div>
                    <div class="perf-row">
                        <span>Class Rank:</span>
                        <strong>5th of 42 students</strong>
                    </div>
                    <div class="perf-row">
                        <span>Trend:</span>
                        <strong class="text-success">
                            <i class="bi bi-arrow-up"></i> Improving
                        </strong>
                    </div>
                </div>
            </div>
        </div>

        <!-- Parent Actions -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="dashboard-card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-lightning"></i> Actions
                    </h5>
                </div>
                <div class="card-body d-flex flex-column gap-2">
                    <button class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-envelope"></i> Contact Instructor
                    </button>
                    <button class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-download"></i> Download Report
                    </button>
                    <button class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-calendar-event"></i> View Schedule
                    </button>
                    <button class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-bell"></i> Set Alert
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Course Content & Materials -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="dashboard-card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-book"></i> Course Materials
                    </h5>
                </div>
                <div class="card-body">
                    <div class="material-item mb-3 pb-3 border-bottom">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6 class="mb-1"><i class="bi bi-file-pdf"></i> Week 8 - Binary Search Trees.pdf</h6>
                                <small class="text-muted">Uploaded: Nov 20, 2024</small>
                            </div>
                            <button class="btn btn-sm btn-link">
                                <i class="bi bi-download"></i>
                            </button>
                        </div>
                    </div>
                    <div class="material-item mb-3 pb-3 border-bottom">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6 class="mb-1"><i class="bi bi-file-pdf"></i> Week 7 - Hash Tables.pdf</h6>
                                <small class="text-muted">Uploaded: Nov 13, 2024</small>
                            </div>
                            <button class="btn btn-sm btn-link">
                                <i class="bi bi-download"></i>
                            </button>
                        </div>
                    </div>
                    <div class="material-item">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6 class="mb-1"><i class="bi bi-file-pdf"></i> Week 6 - Sorting Algorithms.pdf</h6>
                                <small class="text-muted">Uploaded: Nov 6, 2024</small>
                            </div>
                            <button class="btn btn-sm btn-link">
                                <i class="bi bi-download"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Attendance Trends -->
    <div class="row">
        <div class="col-12">
            <div class="dashboard-card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-calendar-check"></i> Attendance Record
                    </h5>
                </div>
                <div class="table-responsive">
                    <table class="table table-sm mb-0">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Status</th>
                                <th>Notes</th>
                                <th>Class Topic</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Nov 22, 2024</td>
                                <td><span class="badge bg-success">Present</span></td>
                                <td>-</td>
                                <td>Advanced Concepts</td>
                            </tr>
                            <tr>
                                <td>Nov 20, 2024</td>
                                <td><span class="badge bg-success">Present</span></td>
                                <td>-</td>
                                <td>Graph Algorithms</td>
                            </tr>
                            <tr>
                                <td>Nov 18, 2024</td>
                                <td><span class="badge bg-success">Present</span></td>
                                <td>-</td>
                                <td>Collision Resolution</td>
                            </tr>
                            <tr>
                                <td>Nov 15, 2024</td>
                                <td><span class="badge bg-warning text-dark">Late</span></td>
                                <td>5 mins late</td>
                                <td>Sorting Comparison</td>
                            </tr>
                            <tr>
                                <td>Nov 13, 2024</td>
                                <td><span class="badge bg-success">Present</span></td>
                                <td>-</td>
                                <td>Dynamic Memory</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .material-item {
        background: #f8f9fa;
        padding: 10px;
        border-radius: 4px;
    }

    .detail-row {
        display: flex;
        justify-content: space-between;
        font-size: 0.9rem;
        padding: 5px 0;
        margin-bottom: 8px;
        border-bottom: 1px solid #f0f0f0;
    }

    .detail-row:last-child {
        border-bottom: none;
        margin-bottom: 0;
    }

    .detail-row .label {
        font-weight: 600;
        color: #666;
    }

    .detail-row .value {
        text-align: right;
    }

    .perf-row {
        display: flex;
        justify-content: space-between;
        font-size: 0.9rem;
        padding: 8px 0;
        border-bottom: 1px solid #f0f0f0;
    }

    .perf-row:last-child {
        border-bottom: none;
    }

    .perf-row span:first-child {
        color: #666;
    }

    .perf-row strong {
        font-weight: 700;
    }
</style>
