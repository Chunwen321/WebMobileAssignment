@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

<div class="row g-3 mb-4">
    <!-- Classes Stats -->
    <div class="col-md-3">
        <div class="stat-card" style="border-left-color: #198754;">
            <div class="stat-label">Total Classes</div>
            <div class="stat-value">12</div>
            <div class="stat-change positive">
                <i class="bi bi-arrow-up"></i>
                <span>+2 this semester</span>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="stat-card" style="border-left-color: #0d6efd;">
            <div class="stat-label">Total Students</div>
            <div class="stat-value">245</div>
            <div class="stat-change positive">
                <i class="bi bi-arrow-up"></i>
                <span>+15 from last year</span>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="stat-card" style="border-left-color: #ffc107;">
            <div class="stat-label">Attendance Rate</div>
            <div class="stat-value">92%</div>
            <div class="stat-change positive">
                <i class="bi bi-arrow-up"></i>
                <span>+3% from last month</span>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="stat-card" style="border-left-color: #17a2b8;">
            <div class="stat-label">Class Sessions</div>
            <div class="stat-value">156</div>
            <div class="stat-change positive">
                <i class="bi bi-arrow-up"></i>
                <span>+12 this month</span>
            </div>
        </div>
    </div>
</div>

<div class="row g-3">
    <!-- Classes Summary -->
    <div class="col-lg-8">
        <div class="dashboard-card">
            <div class="card-header-custom">
                <h3 class="card-title">
                    <i class="bi bi-book-fill"></i>
                    Classes Overview
                </h3>
            </div>
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>Class Name</th>
                            <th>Students</th>
                            <th>Sessions</th>
                            <th>Avg. Attendance</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><strong>Form 5 Science</strong></td>
                            <td>30</td>
                            <td>45</td>
                            <td><span class="badge bg-success">94%</span></td>
                            <td>
                                <a href="#" class="btn btn-sm btn-outline-primary">View</a>
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Form 5 Mathematics</strong></td>
                            <td>28</td>
                            <td>42</td>
                            <td><span class="badge bg-success">91%</span></td>
                            <td>
                                <a href="#" class="btn btn-sm btn-outline-primary">View</a>
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Form 4 English</strong></td>
                            <td>32</td>
                            <td>48</td>
                            <td><span class="badge bg-success">93%</span></td>
                            <td>
                                <a href="#" class="btn btn-sm btn-outline-primary">View</a>
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Form 4 Science</strong></td>
                            <td>31</td>
                            <td>44</td>
                            <td><span class="badge bg-warning">89%</span></td>
                            <td>
                                <a href="#" class="btn btn-sm btn-outline-primary">View</a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <a asp-controller="Teacher" asp-action="TeachClasses" class="btn btn-outline-primary w-100 mt-3">
                <i class="bi bi-arrow-right me-2"></i>View All Classes
            </a>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="col-lg-4">
        <div class="dashboard-card">
            <div class="card-header-custom">
                <h3 class="card-title">
                    <i class="bi bi-lightning-fill"></i>
                    Quick Actions
                </h3>
            </div>
            <div class="list-group list-group-flush">
                <a asp-controller="Teacher" asp-action="TeachMarkAttendance" class="list-group-item list-group-item-action px-0">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-pencil-square text-primary me-3" style="font-size: 1.5rem;"></i>
                        <div>
                            <h6 class="mb-0">Mark Attendance</h6>
                            <small class="text-muted">Record student attendance</small>
                        </div>
                    </div>
                </a>
                <a asp-controller="Teacher" asp-action="TeachAttendanceHistory" class="list-group-item list-group-item-action px-0">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-clock-history text-success me-3" style="font-size: 1.5rem;"></i>
                        <div>
                            <h6 class="mb-0">View History</h6>
                            <small class="text-muted">Check attendance records</small>
                        </div>
                    </div>
                </a>
                <a asp-controller="Teacher" asp-action="TeachStudents" class="list-group-item list-group-item-action px-0">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-people-fill text-info me-3" style="font-size: 1.5rem;"></i>
                        <div>
                            <h6 class="mb-0">Manage Students</h6>
                            <small class="text-muted">View student information</small>
                        </div>
                    </div>
                </a>
                <a asp-controller="Teacher" asp-action="TeachProfile" class="list-group-item list-group-item-action px-0">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-person-badge-fill text-warning me-3" style="font-size: 1.5rem;"></i>
                        <div>
                            <h6 class="mb-0">My Profile</h6>
                            <small class="text-muted">View/edit profile information</small>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>

